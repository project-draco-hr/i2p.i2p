{
  PackageManager pm=ctx.getPackageManager();
  String us=ctx.getPackageName();
  try {
    PackageInfo pi=pm.getPackageInfo(us,0);
    System.err.println("VersionCode" + ": " + pi.versionCode);
    if (pi.versionName != null)     return pi.versionName;
  }
 catch (  Exception e) {
  }
  return "??";
}
