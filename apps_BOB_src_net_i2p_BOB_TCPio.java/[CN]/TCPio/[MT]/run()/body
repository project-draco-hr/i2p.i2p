{
  int b;
  byte a[]=new byte[1];
  try {
    while (info.get("RUNNING").equals(true)) {
      b=Ain.read(a,0,1);
      if (b > 0) {
        Aout.write(a,0,1);
      }
 else       if (b == 0) {
        try {
          Thread.sleep(10);
        }
 catch (        InterruptedException ex) {
        }
      }
 else {
        return;
      }
    }
  }
 catch (  IOException e) {
  }
}
