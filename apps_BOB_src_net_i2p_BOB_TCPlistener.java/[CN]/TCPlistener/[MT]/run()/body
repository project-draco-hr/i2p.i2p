{
  boolean g=false;
  boolean spin=true;
  database.getReadLock();
  info.getReadLock();
  if (info.exists("OUTPORT")) {
    tgwatch=2;
  }
  try {
    ServerSocket listener=new ServerSocket(Integer.parseInt(info.get("INPORT").toString()),backlog,InetAddress.getByName(info.get("INHOST").toString()));
    Socket server=new Socket();
    listener.setSoTimeout(1000);
    info.releaseReadLock();
    database.releaseReadLock();
    while (spin) {
      database.getReadLock();
      info.getReadLock();
      spin=info.get("RUNNING").equals(Boolean.TRUE);
      info.releaseReadLock();
      database.releaseReadLock();
      try {
        server=listener.accept();
        g=true;
      }
 catch (      SocketTimeoutException ste) {
        g=false;
      }
      if (g) {
        TCPtoI2P conn_c=new TCPtoI2P(socketManager,server,info,database);
        Thread t=new Thread(conn_c,"BOBTCPtoI2P");
        t.start();
        g=false;
      }
    }
    listener.close();
  }
 catch (  IOException ioe) {
    database.getReadLock();
    info.getReadLock();
    spin=info.get("RUNNING").equals(Boolean.TRUE);
    info.releaseReadLock();
    database.releaseReadLock();
    if (spin) {
      database.getWriteLock();
      info.getWriteLock();
      info.add("STOPPING",new Boolean(true));
      info.add("RUNNING",new Boolean(false));
      info.releaseWriteLock();
      database.releaseWriteLock();
    }
  }
  while (Thread.activeCount() > tgwatch) {
    try {
      Thread.sleep(1000);
    }
 catch (    Exception e) {
    }
  }
  I2PSession session=socketManager.getSession();
  if (session != null) {
    try {
      session.destroySession();
    }
 catch (    I2PSessionException ex) {
    }
  }
}
