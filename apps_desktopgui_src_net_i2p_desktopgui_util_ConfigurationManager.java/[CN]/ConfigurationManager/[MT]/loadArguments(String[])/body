{
  for (int i=0; i < args.length; i++) {
    String arg=args[i];
    if (arg.startsWith("--")) {
      arg=arg.substring(2);
      if (arg.length() < 1) {
        continue;
      }
      int equals=arg.indexOf('=');
      if (equals != -1 && equals < arg.length() - 1) {
        loadStringConfiguration(arg,equals);
      }
 else {
        loadBooleanConfiguration(arg);
      }
    }
 else     if (arg.startsWith("-")) {
      loadBooleanConfiguration(arg);
    }
  }
}
