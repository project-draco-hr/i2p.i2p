{
  if (serverSocket != socket) {
    if ((peeracceptor == null) || (peeracceptor.coordinators != set))     peeracceptor=new PeerAcceptor(set);
    serverSocket=socket;
    stop=false;
    socketChanged=true;
    if (thread == null) {
      thread=new I2PAppThread(this,"I2PSnark acceptor");
      thread.setDaemon(true);
      thread.start();
    }
  }
}
