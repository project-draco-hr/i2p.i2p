{
  if (_util.connected()) {
    boolean hasPeers=false;
    for (    PeerCoordinator pc : _pcs) {
      if (pc.getPeers() > 0) {
        hasPeers=true;
        break;
      }
    }
    if (hasPeers) {
      if (_isIdle)       restoreTunnels();
    }
 else {
      if (!_isIdle) {
        if (_consec++ >= MAX_CONSEC_IDLE)         reduceTunnels();
      }
    }
  }
 else {
    _isIdle=false;
    _consec=0;
  }
  schedule(CHECK_TIME);
}
