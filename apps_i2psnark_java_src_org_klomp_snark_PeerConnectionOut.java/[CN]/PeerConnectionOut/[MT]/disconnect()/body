{
synchronized (sendQueue) {
    quit=true;
    if (thread != null)     thread.interrupt();
    sendQueue.clear();
    sendQueue.notify();
  }
  if (dout != null) {
    try {
      dout.close();
    }
 catch (    IOException ioe) {
      _log.warn("Error closing the stream to " + peer,ioe);
    }
  }
}
