{
  boolean sendNow=false;
  if (sendNow) {
    byte[] bytes=loader.loadData(piece,begin,length);
    if (bytes != null)     sendPiece(piece,begin,length,bytes);
    return;
  }
  Message m=new Message();
  m.type=Message.PIECE;
  m.piece=piece;
  m.begin=begin;
  m.length=length;
  m.dataLoader=loader;
  m.off=0;
  m.len=length;
  addMessage(m);
}
