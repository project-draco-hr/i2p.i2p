{
  if (halted) {
    peer.disconnect(false);
    return;
  }
synchronized (peers) {
    if (peerIDInList(peer.getPeerID(),peers)) {
      if (Snark.debug >= Snark.INFO)       Snark.debug("Already connected to: " + peer,Snark.INFO);
      peer.disconnect(false);
    }
 else {
      if (Snark.debug >= Snark.INFO)       Snark.debug("New connection to peer: " + peer,Snark.INFO);
      _log.info("New connection to peer " + peer + " for "+ metainfo.getName());
      peers.add(0,peer);
      peerCount=peers.size();
      unchokePeer();
      if (listener != null)       listener.peerChange(this,peer);
    }
  }
}
