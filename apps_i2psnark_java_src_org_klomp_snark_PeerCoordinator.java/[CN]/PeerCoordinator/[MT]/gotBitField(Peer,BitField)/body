{
  if (listener != null)   listener.peerChange(this,peer);
synchronized (wantedPieces) {
    Iterator<Piece> it=wantedPieces.iterator();
    while (it.hasNext()) {
      Piece p=it.next();
      int i=p.getId();
      if (bitfield.get(i)) {
        p.addPeer(peer);
        return true;
      }
    }
  }
  return false;
}
