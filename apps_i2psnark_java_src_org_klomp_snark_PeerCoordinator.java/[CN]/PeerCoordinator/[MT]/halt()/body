{
  halted=true;
  List<Peer> removed=new ArrayList();
synchronized (peers) {
    timer.cancel();
    removed.addAll(peers);
    peers.clear();
    peerCount=0;
  }
  while (!removed.isEmpty()) {
    Peer peer=removed.remove(0);
    peer.disconnect();
    removePeerFromPieces(peer);
  }
synchronized (partialPieces) {
    partialPieces.clear();
  }
}
