{
  Request rv=null;
  int lowest=Integer.MAX_VALUE;
  for (  Request r : outstandingRequests) {
    if (r.piece == piece && r.off < lowest) {
      lowest=r.off;
      rv=r;
    }
  }
  if (pendingRequest != null && pendingRequest.piece == piece && pendingRequest.off < lowest)   rv=pendingRequest;
  if (_log.shouldLog(Log.DEBUG))   _log.debug(peer + " lowest for " + piece+ " is "+ rv+ " out of "+ pendingRequest+ " and "+ outstandingRequests);
  return rv;
}
