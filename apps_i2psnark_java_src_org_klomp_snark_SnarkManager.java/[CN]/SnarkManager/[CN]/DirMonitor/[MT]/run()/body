{
  long delay=(60L * 1000) * getStartupDelayMinutes();
  if (delay > 0 && shouldAutoStart()) {
    addMessage(_("Adding torrents in {0}",DataHelper.formatDuration2(delay)));
    try {
      Thread.sleep(delay);
    }
 catch (    InterruptedException ie) {
    }
    if (_messages.size() == 1)     _messages.poll();
  }
  getBWLimit();
  boolean doMagnets=true;
  while (_running) {
    File dir=getDataDir();
    if (_log.shouldLog(Log.DEBUG))     _log.debug("Directory Monitor loop over " + dir.getAbsolutePath());
    boolean ok;
    try {
synchronized (_snarks) {
        ok=monitorTorrents(dir);
      }
    }
 catch (    Exception e) {
      _log.error("Error in the DirectoryMonitor",e);
      ok=false;
    }
    if (doMagnets) {
      try {
        addMagnets();
        doMagnets=false;
      }
 catch (      Exception e) {
        _log.error("Error in the DirectoryMonitor",e);
      }
      if (!_snarks.isEmpty())       addMessage(_("Up bandwidth limit is {0} KBps",_util.getMaxUpBW()));
      if (ok)       cleanupTorrentStatus();
    }
    try {
      Thread.sleep(60 * 1000);
    }
 catch (    InterruptedException ie) {
    }
  }
}
