{
  Set names=listTorrentFiles();
  int running=0;
  for (Iterator iter=names.iterator(); iter.hasNext(); ) {
    Snark snark=getTorrent((String)iter.next());
    if (snark != null && !snark.isStopped()) {
      snark.stopTorrent();
      try {
        Thread.sleep(50);
      }
 catch (      InterruptedException ie) {
      }
    }
  }
}
