{
  Snark torrent=stopTorrent(filename,true);
  if (torrent != null) {
    File torrentFile=new File(filename);
    torrentFile.delete();
    if (torrent.storage != null)     removeTorrentStatus(torrent.storage.getMetaInfo());
    addMessage("Torrent removed: '" + torrentFile.getName() + "'.");
  }
}
