{
  MetaInfo meta=snark.getMetaInfo();
  Storage storage=snark.getStorage();
  if (meta == null || storage == null)   return;
  StringBuilder buf=new StringBuilder(256);
  buf.append("<a href=\"").append(_contextPath).append('/').append(storage.getBaseName());
  if (meta.getFiles() != null)   buf.append('/');
  buf.append("\">").append(storage.getBaseName()).append("</a>");
  addMessageNoEscape(_("Download finished: {0}",buf.toString()));
  updateStatus(snark);
}
