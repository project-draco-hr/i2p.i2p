{
  if (acceptor != null)   acceptor.halt();
  if (trackerclient != null)   trackerclient.halt();
  if (coordinator != null)   coordinator.halt();
  if (storage != null) {
    try {
      storage.close();
    }
 catch (    IOException ioe) {
      throw new RuntimeException("b0rking");
    }
  }
  try {
    Thread.sleep(5 * 1000);
  }
 catch (  InterruptedException ie) {
  }
  listener.shutdown();
}
