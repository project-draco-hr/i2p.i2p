{
  openRAF(nr,false);
  long remaining=lengths[nr];
  if (listener != null)   listener.storageCreateFile(this,names[nr],remaining);
  final int ZEROBLOCKSIZE=(int)Math.min(remaining,32 * 1024);
  byte[] zeros=new byte[ZEROBLOCKSIZE];
  while (remaining > 0) {
    int size=(int)Math.min(remaining,ZEROBLOCKSIZE);
    rafs[nr].write(zeros,0,size);
    remaining-=size;
  }
  if (listener != null)   listener.storageAllocated(this,lengths[nr]);
}
