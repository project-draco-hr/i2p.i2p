{
  openRAF(nr,false);
  if (listener != null)   listener.storageCreateFile(this,names[nr],lengths[nr]);
  final int ZEROBLOCKSIZE=metainfo.getPieceLength(0);
  byte[] zeros;
  try {
    zeros=new byte[ZEROBLOCKSIZE];
  }
 catch (  OutOfMemoryError oom) {
    throw new IOException(oom.toString());
  }
  int i;
  for (i=0; i < lengths[nr] / ZEROBLOCKSIZE; i++) {
    rafs[nr].write(zeros);
    if (listener != null)     listener.storageAllocated(this,ZEROBLOCKSIZE);
  }
  int size=(int)(lengths[nr] - i * ZEROBLOCKSIZE);
  rafs[nr].write(zeros,0,size);
  if (listener != null)   listener.storageAllocated(this,size);
}
