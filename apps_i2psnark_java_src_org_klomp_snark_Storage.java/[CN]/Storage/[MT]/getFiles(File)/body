{
  ArrayList files=new ArrayList();
  addFiles(files,base);
  int size=files.size();
  names=new String[size];
  lengths=new long[size];
  rafs=new RandomAccessFile[size];
  int i=0;
  Iterator it=files.iterator();
  while (it.hasNext()) {
    File f=(File)it.next();
    names[i]=f.getPath();
    lengths[i]=f.length();
    rafs[i]=new RandomAccessFile(f,"r");
    i++;
  }
}
