{
  if (base.getAbsolutePath().equals("/"))   throw new IOException("Don't seed root");
  List<File> files=new ArrayList();
  addFiles(files,base);
  int size=files.size();
  List<TorrentFile> rv=new ArrayList(size);
  for (  File f : files) {
    rv.add(new TorrentFile(base,f));
  }
  Collections.sort(rv);
  return rv;
}
