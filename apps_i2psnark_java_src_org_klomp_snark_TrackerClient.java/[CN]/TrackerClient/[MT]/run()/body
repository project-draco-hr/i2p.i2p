{
  long begin=Clock.getInstance().now();
  if (_log.shouldLog(Log.DEBUG))   _log.debug("Start " + Thread.currentThread().getName());
  try {
    if (!_initialized) {
      setup();
    }
    if (trackers.isEmpty() && _util.getDHT() == null) {
      stop=true;
      this.snark.addMessage(_util.getString("No valid trackers for {0} - enable opentrackers or DHT?",this.snark.getBaseName()));
      _log.error("No valid trackers for " + this.snark.getBaseName());
      this.snark.stopTorrent();
      return;
    }
    if (!_initialized) {
      _initialized=true;
      long delay=I2PAppContext.getGlobalContext().random().nextInt(30 * 1000);
      try {
        Thread.sleep(delay);
      }
 catch (      InterruptedException ie) {
      }
    }
    loop();
  }
  finally {
    _thread=null;
    if (_log.shouldLog(Log.DEBUG))     _log.debug("Finish " + Thread.currentThread().getName() + " after "+ DataHelper.formatDuration(Clock.getInstance().now() - begin));
  }
}
