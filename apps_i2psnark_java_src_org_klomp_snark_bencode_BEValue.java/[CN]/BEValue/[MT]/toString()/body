{
  String valueString;
  if (value instanceof byte[]) {
    byte[] bs=(byte[])value;
    if (bs.length <= 32)     valueString=bs.length + " bytes: " + Base64.encode(bs);
 else     valueString=bs.length + " bytes";
  }
 else   valueString=value.toString();
  return "BEValue[" + valueString + "]";
}
