{
  if (bytes < 5 * 1024)   return bytes + " B";
 else   if (bytes < 5 * 1024 * 1024)   return ((bytes + 512) / 1024) + " KB";
 else   if (bytes < 10 * 1024 * 1024* 1024l)   return ((bytes + 512 * 1024) / (1024 * 1024)) + " MB";
 else   return ((bytes + 512 * 1024 * 1024) / (1024 * 1024 * 1024)) + " GB";
}
