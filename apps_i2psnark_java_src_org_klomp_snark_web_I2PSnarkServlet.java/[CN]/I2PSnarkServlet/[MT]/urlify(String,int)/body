{
  StringBuilder buf=new StringBuilder(256);
  String link=urlEncode(s);
  String display;
  if (s.length() <= max)   display=link;
 else   display=urlEncode(s.substring(0,max)) + "&hellip;";
  buf.append("<a href=\"").append(link).append("\">").append(display).append("</a>");
  return buf.toString();
}
