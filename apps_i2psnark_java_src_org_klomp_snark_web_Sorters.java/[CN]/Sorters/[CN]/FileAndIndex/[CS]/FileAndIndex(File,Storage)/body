{
  this.file=file;
  index=storage != null ? storage.indexOf(file) : -1;
  if (index >= 0) {
    isDirectory=false;
    remaining=storage.remaining(index);
    priority=storage.getPriority(index);
  }
 else {
    isDirectory=file.isDirectory();
    remaining=-1;
    priority=-999;
  }
  length=isDirectory ? 0 : file.length();
}
