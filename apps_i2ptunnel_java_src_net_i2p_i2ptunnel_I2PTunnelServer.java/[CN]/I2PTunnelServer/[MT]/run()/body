{
  if (shouldUsePool()) {
    I2PServerSocket i2pss=sockMgr.getServerSocket();
    int handlers=getHandlerCount();
    for (int i=0; i < handlers; i++) {
      I2PThread handler=new I2PThread(new Handler(i2pss),"Handle Server " + i);
      handler.start();
    }
  }
 else {
    I2PServerSocket i2pss=sockMgr.getServerSocket();
    while (true) {
      try {
        final I2PSocket i2ps=i2pss.accept();
        if (i2ps == null)         throw new I2PException("I2PServerSocket closed");
        new I2PThread(new Runnable(){
          public void run(){
            blockingHandle(i2ps);
          }
        }
).start();
      }
 catch (      I2PException ipe) {
        if (_log.shouldLog(Log.ERROR))         _log.error("Error accepting - KILLING THE TUNNEL SERVER",ipe);
        return;
      }
catch (      ConnectException ce) {
        if (_log.shouldLog(Log.ERROR))         _log.error("Error accepting",ce);
      }
catch (      SocketTimeoutException ste) {
      }
    }
  }
}
