{
  try {
    this.ss=new InternalServerSocket(this.port);
    this.open=true;
    while (true) {
      Socket s=this.ss.accept();
      this.client.manageConnection(s);
    }
  }
 catch (  IOException ex) {
    if (this.open) {
      _log.error("Error listening for internal connections on port " + this.port,ex);
    }
    this.open=false;
  }
}
