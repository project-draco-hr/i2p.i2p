{
  TunnelController tun=getController(tunnel);
  if (tun != null) {
    Properties opts=getOptions(tun);
    if (opts != null) {
      String s=opts.getProperty(prop);
      if (s == null)       return def;
      try {
        return Integer.parseInt(s);
      }
 catch (      NumberFormatException nfe) {
      }
    }
  }
  return def;
}
