{
  if (log.isDebugEnabled())   log.debug("DELETE " + pathInContext + " from "+ resource);
  if (!resource.exists() || !passConditionalHeaders(request,response,resource))   return;
  try {
    if (resource.delete())     response.setStatus(HttpResponse.__204_No_Content);
 else     response.sendError(HttpResponse.__403_Forbidden);
    request.setHandled(true);
  }
 catch (  SecurityException sex) {
    log.warn(LogSupport.EXCEPTION,sex);
    response.sendError(HttpResponse.__403_Forbidden,sex.getMessage());
  }
}
