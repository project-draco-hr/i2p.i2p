{
  setName("Shutdown");
  log.info("Shutdown hook executing");
  Iterator it=servers.iterator();
  while (it.hasNext()) {
    Server svr=(Server)it.next();
    if (svr == null)     continue;
    try {
      svr.stop();
    }
 catch (    Exception e) {
      log.warn(LogSupport.EXCEPTION,e);
    }
    log.info("Shutdown hook complete");
    try {
      Thread.sleep(1000);
    }
 catch (    Exception e) {
      log.warn(LogSupport.EXCEPTION,e);
    }
  }
}
