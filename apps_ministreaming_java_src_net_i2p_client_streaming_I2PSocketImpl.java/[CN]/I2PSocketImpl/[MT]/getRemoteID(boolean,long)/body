{
  long dieAfter=System.currentTimeMillis() + maxWait;
synchronized (remoteIDWaiter) {
    while (wait && remoteID == null) {
      try {
        if (maxWait > 0)         remoteIDWaiter.wait(maxWait);
 else         remoteIDWaiter.wait();
      }
 catch (      InterruptedException ex) {
      }
      if ((maxWait > 0) && (System.currentTimeMillis() > dieAfter))       throw new InterruptedIOException("Timed out waiting for remote ID");
    }
    if (wait) {
      _log.debug("TIMING: RemoteID set to " + I2PSocketManager.getReadableForm(remoteID) + " for "+ this.hashCode());
    }
    return remoteID;
  }
}
