{
  FileInputStream fis=null;
  try {
    File cfgFile=new File(_configFile);
    if (cfgFile.exists()) {
      fis=new FileInputStream(cfgFile);
      Properties props=new Properties();
      props.load(fis);
      setConfig(props);
      if (_log.shouldLog(Log.INFO))       _log.info("Config loaded from " + _configFile);
    }
 else {
      if (_log.shouldLog(Log.ERROR))       _log.error("Config file " + _configFile + " does not exist, so we aren't going to do much");
    }
  }
 catch (  IOException ioe) {
    if (_log.shouldLog(Log.ERROR))     _log.error("Error reading config file " + _configFile,ioe);
  }
 finally {
    if (fis != null)     try {
      fis.close();
    }
 catch (    IOException ioe) {
    }
  }
}
