{
  if (name == null)   throw new IllegalArgumentException("Missing name");
  if (name.indexOf('=') != -1)   throw new IllegalArgumentException("Name cannot have an = sign");
  if (name.indexOf('\n') != -1)   throw new IllegalArgumentException("Name cannot have a newline");
  if (value != null) {
    if (value.indexOf('\n') != -1)     throw new IllegalArgumentException("Values do not allow newlines");
    _options.setProperty(name,value);
  }
 else {
    _options.remove(name);
  }
}
