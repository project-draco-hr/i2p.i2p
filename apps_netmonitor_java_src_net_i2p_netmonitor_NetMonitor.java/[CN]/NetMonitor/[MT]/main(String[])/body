{
  String cfgLocation=CONFIG_LOCATION_DEFAULT;
  String explicitFilenames=null;
  String explicitURL=null;
switch (args.length) {
case 0:
    break;
case 1:
  cfgLocation=args[0];
break;
case 2:
if ("--routers".equalsIgnoreCase(args[0])) explicitFilenames=args[1];
 else explicitURL=args[1];
break;
case 3:
cfgLocation=args[0];
if ("--routers".equalsIgnoreCase(args[1])) explicitFilenames=args[2];
 else explicitURL=args[2];
break;
default :
System.err.println("Usage: NetMonitor [configFilename] [--routers filename[,filename]*] [--netDbURL url]");
return;
}
new NetMonitor(cfgLocation,explicitFilenames,explicitURL).startMonitor();
}
