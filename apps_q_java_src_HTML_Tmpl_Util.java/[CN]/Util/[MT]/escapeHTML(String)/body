{
  String s=new String(element);
  String[] metas={"&","<",">","\""};
  String[] repls={"&amp;","&lt;","&gt;","&quot;"};
  for (int i=0; i < metas.length; i++) {
    int pos=0;
    do {
      pos=s.indexOf(metas[i],pos);
      if (pos < 0)       break;
      s=s.substring(0,pos) + repls[i] + s.substring(pos + 1);
      pos++;
    }
 while (pos >= 0);
  }
  return s;
}
