{
  content=new Vector();
  attribs=new Vector();
  styles=new Vector();
  if (opentag == null) {
    return;
  }
  String[] tagBits=opentag.split("\\s+",2);
  open=tagBits[0];
  if (open.endsWith("/")) {
    open=open.substring(0,open.length() - 1);
    close="";
  }
 else {
    close="</" + open + ">";
  }
  if (tagBits.length > 1) {
    attribs.addElement(tagBits[1]);
  }
  breakBefore=nlOnOpen.contains(open);
  breakAfter=breakBefore || nlOnClose.contains(open);
}
