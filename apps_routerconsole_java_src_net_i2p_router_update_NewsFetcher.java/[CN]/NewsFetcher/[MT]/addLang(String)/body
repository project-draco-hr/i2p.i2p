{
  if (url.contains("?lang=") || url.contains("&lang="))   return url;
  String lang=Translate.getLanguage(_context);
  if (lang.equals("en"))   return url;
  StringBuilder buf=new StringBuilder();
  buf.append(url);
  if (url.contains("?"))   buf.append("&lang=");
 else   buf.append("?lang=");
  buf.append(lang);
  String co=Translate.getCountry(_context);
  if (co.length() > 0)   buf.append('_').append(co);
  return buf.toString();
}
