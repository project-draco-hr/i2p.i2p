{
  if (shouldFetchNews()) {
    fetchNews();
    if (shouldFetchUnsigned()) {
      try {
        Thread.sleep(5 * 1000);
      }
 catch (      InterruptedException ie) {
      }
      if (!_mgr.isCheckInProgress() && !_mgr.isUpdateInProgress())       fetchUnsignedHead();
    }
  }
 else   if (_firstRun) {
    if (_mgr.shouldInstall() && !_mgr.isCheckInProgress() && !_mgr.isUpdateInProgress())     _mgr.update(ROUTER_SIGNED);
  }
  _firstRun=false;
}
