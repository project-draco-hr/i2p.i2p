{
  String[] addrs=Addresses.getAllAddresses();
  List<String> aList=new ArrayList();
  aList.addAll(Arrays.asList(addrs));
  boolean ipv6=false;
  for (  String a : aList) {
    if (a.indexOf(':') >= 0) {
      ipv6=true;
      break;
    }
  }
  if (!aList.contains("0.0.0.0"))   aList.add("0.0.0.0");
  if (ipv6 && !aList.contains("0:0:0:0:0:0:0:0"))   aList.add("0:0:0:0:0:0:0:0");
  Collections.sort(aList);
  return aList.toArray(addrs);
}
