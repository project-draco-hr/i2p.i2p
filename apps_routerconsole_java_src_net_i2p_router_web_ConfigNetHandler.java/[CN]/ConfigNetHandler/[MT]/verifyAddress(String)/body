{
  if (addr == null || addr.length() <= 0)   return false;
  byte[] iab=Addresses.getIP(addr);
  if (iab == null) {
    addFormError(_("Invalid address") + ": " + addr);
    return false;
  }
  boolean rv=TransportUtil.isPubliclyRoutable(iab,true);
  if (!rv)   addFormError(_("The hostname or IP {0} is not publicly routable",addr));
  return rv;
}
