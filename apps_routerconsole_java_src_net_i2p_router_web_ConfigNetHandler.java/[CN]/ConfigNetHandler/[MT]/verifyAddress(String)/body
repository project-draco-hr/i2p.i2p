{
  if (addr == null || addr.length() <= 0)   return false;
  try {
    InetAddress ia=InetAddress.getByName(addr);
    byte[] iab=ia.getAddress();
    boolean rv=TransportImpl.isPubliclyRoutable(iab);
    if (!rv)     addFormError(_("The hostname or IP {0} is not publicly routable",addr));
    return rv;
  }
 catch (  UnknownHostException uhe) {
    addFormError(_("The hostname or IP {0} is invalid",addr) + ": " + uhe);
    return false;
  }
}
