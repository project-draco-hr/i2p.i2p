{
  String dirName=_context.getProperty("router.networkDatabase.dbDir","netDb");
  File netDbDir=new File(dirName);
  if (!netDbDir.exists()) {
    boolean ok=netDbDir.mkdirs();
    if (ok)     addFormNotice("Network database directory created: " + dirName);
 else     addFormNotice("Error creating network database directory: " + dirName);
  }
  FileOutputStream fos=new FileOutputStream(new File(netDbDir,"routerInfo-" + name + ".dat"));
  fos.write(data);
  fos.close();
}
