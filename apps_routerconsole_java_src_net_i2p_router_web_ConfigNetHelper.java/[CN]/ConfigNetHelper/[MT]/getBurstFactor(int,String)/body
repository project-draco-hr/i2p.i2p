{
  StringBuffer buf=new StringBuffer(256);
  buf.append("<select name=\"").append(name).append("\">\n");
  for (int i=1; i < 10; i++) {
    buf.append("<option value=\"").append(i).append("\" ");
    if ((i == numSeconds) || (i == 10))     buf.append("selected ");
    buf.append(">");
    if (i == 1)     buf.append("1 second (no burst)</option>\n");
 else     buf.append(i).append(" seconds</option>\n");
  }
  buf.append("</select>\n");
  return buf.toString();
}
