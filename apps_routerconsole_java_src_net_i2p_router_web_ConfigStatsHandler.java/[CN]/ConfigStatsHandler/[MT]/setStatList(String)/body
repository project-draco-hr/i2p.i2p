{
  if (stat != null) {
    if (stat.indexOf(',') != -1) {
      StringTokenizer tok=new StringTokenizer(stat,",");
      while (tok.hasMoreTokens()) {
        String cur=tok.nextToken().trim();
        if ((cur.length() > 0) && (!_stats.contains(cur)))         _stats.add(cur);
      }
    }
 else {
      stat=stat.trim();
      if ((stat.length() > 0) && (!_stats.contains(stat)))       _stats.add(stat);
    }
  }
}
