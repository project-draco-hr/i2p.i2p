{
  for (int i=min; i <= max; i++) {
    buf.append("<option value=\"").append(i).append("\" ");
    if (i == now)     buf.append("selected=\"true\" ");
    buf.append(">").append(prefix).append(i).append(' ').append(name);
    if (i != 1 && i != -1)     buf.append('s');
    buf.append("</option>\n");
  }
}
