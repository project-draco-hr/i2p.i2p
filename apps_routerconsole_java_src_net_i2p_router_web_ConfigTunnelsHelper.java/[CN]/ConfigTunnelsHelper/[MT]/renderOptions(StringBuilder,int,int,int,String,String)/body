{
  for (int i=min; i <= max; i++) {
    buf.append("<option value=\"").append(i).append("\" ");
    if (i == now)     buf.append("selected=\"true\" ");
    String pname;
    if (i != 1 && i != -1)     pname=name + 's';
 else     pname=name;
    buf.append(">").append(prefix).append(i).append(' ').append(_(pname));
    buf.append("</option>\n");
  }
}
