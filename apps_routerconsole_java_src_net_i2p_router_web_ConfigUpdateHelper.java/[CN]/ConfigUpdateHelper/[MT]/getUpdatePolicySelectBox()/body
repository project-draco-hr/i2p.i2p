{
  String policy=_context.getProperty(ConfigUpdateHandler.PROP_UPDATE_POLICY);
  if (policy == null)   policy=ConfigUpdateHandler.DEFAULT_UPDATE_POLICY;
  StringBuffer buf=new StringBuffer(256);
  buf.append("<select name=\"updatePolicy\">");
  if ("notify".equals(policy))   buf.append("<option value=\"notify\" selected=\"true\">Notify only</option>");
 else   buf.append("<option value=\"notify\">Notify only</option>");
  if ("install".equals(policy))   buf.append("<option value=\"install\" selected=\"true\">Download and install</option>");
 else   buf.append("<option value=\"install\">Download and install</option>");
  buf.append("</select>\n");
  return buf.toString();
}
