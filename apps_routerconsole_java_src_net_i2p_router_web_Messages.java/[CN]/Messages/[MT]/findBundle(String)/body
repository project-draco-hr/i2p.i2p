{
  ResourceBundle rv=_bundles.get(lang);
  if (rv == null && !_missing.contains(lang)) {
    try {
      rv=ResourceBundle.getBundle(BUNDLE_NAME,new Locale(lang));
      if (rv != null)       _bundles.put(lang,rv);
    }
 catch (    MissingResourceException e) {
      _missing.add(lang);
    }
  }
  return rv;
}
