{
  try {
    Thread.sleep(_context.random().nextLong(5 * 60 * 1000));
  }
 catch (  InterruptedException ie) {
  }
  while (true) {
    if (!_updateAvailable)     checkForUpdates();
    if (shouldFetchNews()) {
      fetchNews();
      if (shouldFetchUnsigned())       fetchUnsignedHead();
    }
    try {
      Thread.sleep(10 * 60 * 1000);
    }
 catch (    InterruptedException ie) {
    }
  }
}
