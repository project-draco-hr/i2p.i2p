{
  try {
    Thread.sleep(INITIAL_DELAY + _context.random().nextLong(INITIAL_DELAY));
  }
 catch (  InterruptedException ie) {
  }
  while (_isRunning) {
    if (!_updateAvailable)     checkForUpdates();
    if (shouldFetchNews()) {
      fetchNews();
      if (shouldFetchUnsigned())       fetchUnsignedHead();
    }
    try {
      Thread.sleep(RUN_DELAY);
    }
 catch (    InterruptedException ie) {
    }
  }
}
