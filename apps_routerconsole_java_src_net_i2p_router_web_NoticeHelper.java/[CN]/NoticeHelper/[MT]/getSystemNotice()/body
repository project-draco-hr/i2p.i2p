{
  if (true)   return "";
  if (_context.router().gracefulShutdownInProgress()) {
    long remaining=_context.router().getShutdownTimeRemaining();
    if (remaining > 0)     return "Graceful shutdown in " + DataHelper.formatDuration(remaining);
 else     return "Graceful shutdown imminent, please be patient as state is written to disk";
  }
 else {
    return "";
  }
}
