{
  StringBuilder buf=new StringBuilder(64);
  buf.append("<b>").append(_("Downloading plugin")).append(' ');
  double pct=((double)alreadyTransferred + (double)currentWrite) / ((double)alreadyTransferred + (double)currentWrite + (double)bytesRemaining);
synchronized (_pct) {
    buf.append(_pct.format(pct));
  }
  buf.append(": ");
  buf.append(_("{0}B transferred",DataHelper.formatSize2(currentWrite + alreadyTransferred)));
  updateStatus(buf.toString());
}
