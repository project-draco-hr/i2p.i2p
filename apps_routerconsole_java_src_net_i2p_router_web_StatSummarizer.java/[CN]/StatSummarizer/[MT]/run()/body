{
  String vendor=System.getProperty("java.vendor");
  if (vendor.startsWith("Apache") || vendor.startsWith("GNU Classpath") || vendor.startsWith("Free Software Foundation")) {
    _log.logAlways(Log.WARN,"Graphing not supported with this JVM: " + vendor + ' '+ System.getProperty("java.version")+ " ("+ System.getProperty("java.runtime.name")+ ' '+ System.getProperty("java.runtime.version")+ ')');
    _isDisabled=true;
    _isRunning=false;
    return;
  }
  boolean isPersistent=_context.getBooleanPropertyDefaultTrue(SummaryListener.PROP_PERSISTENT);
  if (!isPersistent)   deleteOldRRDs();
  _thread=Thread.currentThread();
  String specs="";
  while (_isRunning && _context.router().isAlive()) {
    specs=adjustDatabases(specs);
    try {
      Thread.sleep(60 * 1000);
    }
 catch (    InterruptedException ie) {
    }
  }
}
