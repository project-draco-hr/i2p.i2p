{
  int scale=0;
  if (bytes > 1024 * 1024 * 1024) {
    scale=3;
    bytes/=(1024 * 1024 * 1024);
  }
 else   if (bytes > 1024 * 1024) {
    scale=2;
    bytes/=(1024 * 1024);
  }
 else   if (bytes > 1024) {
    scale=1;
    bytes/=1024;
  }
 else {
    scale=0;
  }
  DecimalFormat fmt=new DecimalFormat("##0.00");
  String str=fmt.format(bytes);
switch (scale) {
case 1:
    return str + "KB";
case 2:
  return str + "MB";
case 3:
return str + "GB";
default :
return bytes + "bytes";
}
}
