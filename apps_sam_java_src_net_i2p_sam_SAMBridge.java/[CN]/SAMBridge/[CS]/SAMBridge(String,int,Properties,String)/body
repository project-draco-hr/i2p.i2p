{
  persistFilename=persistFile;
  loadKeys();
  try {
    if ((listenHost != null) && !("0.0.0.0".equals(listenHost))) {
      serverSocket=new ServerSocket(listenPort,0,InetAddress.getByName(listenHost));
      if (_log.shouldLog(Log.DEBUG))       _log.debug("SAM bridge listening on " + listenHost + ":"+ listenPort);
    }
 else {
      serverSocket=new ServerSocket(listenPort);
      if (_log.shouldLog(Log.DEBUG))       _log.debug("SAM bridge listening on 0.0.0.0:" + listenPort);
    }
  }
 catch (  Exception e) {
    if (_log.shouldLog(Log.ERROR))     _log.error("Error starting SAM bridge on " + (listenHost == null ? "0.0.0.0" : listenHost) + ":"+ listenPort,e);
  }
  this.i2cpProps=i2cpProps;
}
