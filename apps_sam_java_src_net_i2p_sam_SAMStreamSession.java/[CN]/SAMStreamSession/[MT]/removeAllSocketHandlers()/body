{
  Integer id;
  Set<Integer> keySet;
  Iterator<Integer> iter;
synchronized (handlersMapLock) {
    keySet=handlersMap.keySet();
    iter=keySet.iterator();
    while (iter.hasNext()) {
      id=iter.next();
      handlersMap.get(id).stopRunning();
      sendersMap.get(id).shutDownGracefully();
    }
    handlersMap.clear();
    sendersMap.clear();
  }
}
