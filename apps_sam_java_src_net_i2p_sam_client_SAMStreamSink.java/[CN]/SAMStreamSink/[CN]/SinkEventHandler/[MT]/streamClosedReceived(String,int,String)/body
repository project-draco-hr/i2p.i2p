{
  Sink sink=null;
synchronized (_remotePeers) {
    sink=_remotePeers.remove(Integer.valueOf(id));
  }
  if (sink != null) {
    sink.closed();
    _log.debug("Connection " + sink.getConnectionId() + " closed to "+ sink.getDestination());
  }
 else {
    _log.error("wtf, not connected to " + id + " but we were just closed?");
  }
}
