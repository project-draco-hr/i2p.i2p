def _recvbytes(self, count):
    '\n        Does a guaranteed read of n bytes\n        '
    read = self.rfile.read
    chunks = []
    needed = count
    while (needed > 0):
        chunk = read(needed)
        chunklen = len(chunk)
        needed -= chunklen
        chunks.append(chunk)
    raw = ''.join(chunks)
    return raw
