def __init__(self, session, port, samaddr=samaddr, nconnect=(-1), timeout=None, **kwargs):
    'Tunnels incoming SAM streams --> localhost:port.\n\n       nconnect and timeout are the maximum number of connections\n       and maximum time per connection.  All other arguments are\n       passed to sam.socket().  This call blocks until the tunnel\n       is ready.'
    S = socket(session, SOCK_STREAM, samaddr, **kwargs)
    S.listen(64)
    self.session = session
    self.dest = S.dest

    def make_send():
        C = pysocket.socket(pysocket.AF_INET, pysocket.SOCK_STREAM)
        C.setblocking(False)
        try:
            C.connect(('127.0.0.1', port))
        except:
            pass
        return C
    Tunnel.__init__(self, S, make_send, nconnect, timeout)
