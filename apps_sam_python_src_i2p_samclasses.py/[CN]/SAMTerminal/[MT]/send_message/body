def send_message(self, msg):
    'Send a message to the SAM bridge.  A newline will be\n       automatically added if none is present.'
    self.check()
    if (not ('\n' in msg)):
        msg = (msg + '\n')
    if sam_log:
        logf = open('log.txt', 'a')
        logf.write(('\n' + msg))
        logf.close()
    try:
        self.sock.sendall(msg)
    except socket.error:
        self.error = self.lost_error
    self.check()
