def __init__(self, parent, remotedest, id, didconnect=True):
    self.parent = parent
    self.buf = StringBuffer()
    self.localdest = parent.dest
    self.remotedest = remotedest
    self.id = id
    self.lock = threading.RLock()
    self.closed = False
    self.err = None
    self.didconnect = didconnect
