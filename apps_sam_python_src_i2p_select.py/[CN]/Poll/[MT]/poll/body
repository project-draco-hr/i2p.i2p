def poll(self, timeout=None):
    (readlist, writelist, errlist) = ([], [], [])
    for (F, mask) in self.fds:
        if (mask & POLLIN):
            readlist += [F]
        if (mask & POLLOUT):
            writelist += [F]
        if (mask & POLLERR):
            errlist += [F]
    (Rs, Ws, Es) = select(readlist, writelist, errlist, timeout=timeout)
    ans = []
    for R in Rs:
        ans.append((R, POLLIN))
    for W in Ws:
        ans.append((W, POLLOUT))
    for E in Es:
        ans.append((E, POLLERR))
    return ans
