def select(self, criterion):
    "\n        Returns a table of items for which criterion(item) returns True\n        Otherwise, if 'criterion' is a string, returns the items whose\n        state == criterion.\n        Otherwise, if 'criterion' is a list or tuple, return the items\n        whose state is one of the elements in criterion\n        "
    if callable(criterion):
        func = criterion
    elif (type(criterion) in [type(()), type([])]):
        func = (lambda p: (p.state in criterion))
    else:
        func = (lambda p: (p.state == criterion))
    recs = []
    for peerRec in self.peers:
        if func(peerRec):
            recs.append(peerRec)
    return self.newtable(recs)
