def _recvbytes(self, num):
    '\n        Guaranteed read of num bytes\n        '
    if (num <= 0):
        return ''
    reqd = num
    chunks = []
    while (reqd > 0):
        chunk = self.sock.recv(reqd)
        if (not chunk):
            raise I2PServerFail('Buffer read fail')
        chunks.append(chunk)
        reqd -= len(chunk)
    return ''.join(chunks)
