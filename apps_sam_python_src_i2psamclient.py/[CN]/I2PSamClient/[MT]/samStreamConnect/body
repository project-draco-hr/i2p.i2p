def samStreamConnect(self, dest):
    '\n        Makes a STREAM connection to a remote dest\n    \n        STREAM STATUS\n        RESULT=$result\n        ID=$id\n        [MESSAGE=...]\n        '
    id = self.samAllocId()
    q = self.streamConnectReplies[id] = Queue.Queue()
    self.samSend('STREAM', 'CONNECT', ID=id, DESTINATION=dest)
    resp = q.get()
    del self.streamConnectReplies[id]
    del q
    result = resp['RESULT']
    if (result == 'OK'):
        conn = I2PSAMStream(self, id, dest)
        self.streams[id] = conn
        return conn
    else:
        msg = resp.get('MESSAGE', '')
        raise I2PCommandFail(result, msg, 'STREAM CONNECT')
