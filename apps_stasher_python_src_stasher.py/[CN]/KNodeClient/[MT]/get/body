def get(self, key, **kw):
    "\n        sends a get command to stasher socket, and retrieves\n        and interprets result\n        \n        Arguments:\n            - key - key to retrieve\n        \n        Keywords:\n            - local - default False - if True, only looks in local storage\n        \n        Returns key's value if found, or None if key not found\n        "
    if kw.get('local', False):
        cmd = 'getlocal'
    else:
        cmd = 'get'
    self.connect()
    self.write(('%s %s\n' % (cmd, key)))
    self.flush()
    res = self.readline().strip()
    if (res == 'ok'):
        size = int(self.readline())
        val = self.read(size)
        self.close()
        return val
    else:
        self.close()
        return None
