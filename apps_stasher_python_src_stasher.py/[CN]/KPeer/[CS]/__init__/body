def __init__(self, node, dest):
    "\n        Create a ref to a kademlia peer node\n        \n        Arguments:\n            - node - reference to node which has the relationship\n              to this peer\n            - dest - the peer's I2P destination, as base64\n        "
    if (not isinstance(node, KNode)):
        raise KBadNode(node)
    if (not isinstance(dest, str)):
        raise KBadDest(dest)
    self.node = node
    self.dest = dest
    self.id = KHash(dest)
    self.justSeen()
