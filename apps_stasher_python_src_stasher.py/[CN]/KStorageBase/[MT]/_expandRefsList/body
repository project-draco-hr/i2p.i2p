def _expandRefsList(self, args, lst=None):
    '\n        Takes a sequence of args, each of which can be a KPeer\n        object, or a list or tuple of KPeer objects, and expands\n        this into a flat list\n        '
    if (lst == None):
        lst = []
    for item in args:
        if (type(item) in [type(()), type([])]):
            self._expandRefsList(item, lst)
        else:
            lst.append(item)
    return lst
