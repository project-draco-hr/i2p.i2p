def getRefs(self):
    "\n        Returns a list of KPeer objects, comprising refs\n        of peers known to this node\n    \n        These are read from the directory self.refsDir.\n        Any that can't be unpickled and instantiated are dropped, but logged\n        "
    peers = []
    for f in os.listdir(self.refsDir):
        path = os.path.join(self.refsDir, f)
        pickled = file(path, 'rb').read()
        try:
            d = bencode.bdecode(pickled)
        except:
            self.log(3, ('node %s, bad pickle ref file %s' % (self.nodeName, f)))
            continue
        try:
            peer = KPeer(self.node, d['dest'])
        except:
            self.log(3, ('node %s, bad unpickled ref file %s' % (self.nodeName, f)))
            continue
        peers.append(peer)
    return peers
