{
  _connected=false;
  I2PSocketFull s=_socket;
  if (s != null) {
    s.destroy2();
    _socket=null;
  }
  if (_outputStream != null)   _outputStream.destroy();
  if (_receiver != null)   _receiver.destroy();
  if (_activityTimer != null)   _activityTimer.cancel();
  if (_inputStream != null)   _inputStream.streamErrorOccurred(new IOException("disconnected!"));
  if (_disconnectScheduledOn < 0) {
    _disconnectScheduledOn=_context.clock().now();
    if (_log.shouldLog(Log.INFO))     _log.info("Connection disconnect complete from dead, drop the con " + toString());
    _connectionManager.removeConnection(this);
  }
  killOutstandingPackets();
}
