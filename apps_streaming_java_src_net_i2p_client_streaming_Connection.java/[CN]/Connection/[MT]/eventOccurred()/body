{
  long now=System.currentTimeMillis();
  TaskScheduler sched=_chooser.getScheduler(this);
  now=now - now % 1000;
  if (_occurredTime == now) {
    _occurredEventCount++;
  }
 else {
    _occurredTime=now;
    if ((_occurredEventCount > 1000) && (_log.shouldLog(Log.WARN))) {
      _log.warn("More than 1000 events (" + _occurredEventCount + ") in a second on "+ toString()+ ": scheduler = "+ sched);
    }
    _occurredEventCount=0;
  }
  long before=System.currentTimeMillis();
  sched.eventOccurred(this);
  long elapsed=System.currentTimeMillis() - before;
  if ((elapsed > 1000) && (_log.shouldLog(Log.WARN)))   _log.warn("Took " + elapsed + "ms to pump through "+ sched);
}
