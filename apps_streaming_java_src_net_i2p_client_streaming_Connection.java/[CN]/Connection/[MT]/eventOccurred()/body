{
  long now=System.currentTimeMillis();
  TaskScheduler sched=_chooser.getScheduler(this);
  now=now - now % 1000;
  if (_occurredTime == now) {
    _occurredEventCount++;
  }
 else {
    _occurredTime=now;
    if (_occurredEventCount > 100) {
      _log.log(Log.CRIT,"More than 100 events (" + _occurredEventCount + ") in a second on "+ toString()+ ": scheduler = "+ sched);
    }
    _occurredEventCount=0;
  }
  sched.eventOccurred(this);
}
