{
  _resetReceived=true;
  MessageOutputStream mos=_outputStream;
  MessageInputStream mis=_inputStream;
  if (mos != null)   mos.streamErrorOccurred(new IOException("Reset received"));
  if (mis != null)   mis.streamErrorOccurred(new IOException("Reset received"));
  _connectionError="Connection reset";
synchronized (_connectLock) {
    _connectLock.notifyAll();
  }
}
