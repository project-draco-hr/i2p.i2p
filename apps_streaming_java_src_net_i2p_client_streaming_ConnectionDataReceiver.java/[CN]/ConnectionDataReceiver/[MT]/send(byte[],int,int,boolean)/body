{
  long before=System.currentTimeMillis();
  PacketLocal packet=buildPacket(buf,off,size,forceIncrement);
  long built=System.currentTimeMillis();
  _connection.sendPacket(packet);
  long sent=System.currentTimeMillis();
  if ((built - before > 1000) && (_log.shouldLog(Log.WARN)))   _log.warn("wtf, took " + (built - before) + "ms to build a packet: "+ packet);
  if ((sent - built > 1000) && (_log.shouldLog(Log.WARN)))   _log.warn("wtf, took " + (sent - built) + "ms to send a packet: "+ packet);
  return packet;
}
