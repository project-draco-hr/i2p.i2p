{
  if (con == null)   return false;
  long timeSinceClose=_context.clock().now() - con.getCloseSentOn();
  boolean nothingLeftToDo=(con.getCloseSentOn() > 0) && (con.getCloseReceivedOn() > 0) && (con.getUnackedPacketsReceived() <= 0)&& (con.getUnackedPacketsSent() <= 0)&& (timeSinceClose >= Connection.DISCONNECT_TIMEOUT);
  boolean timedOut=(con.getOptions().getConnectTimeout() < con.getLifetime()) && con.getSendStreamId() == null && con.getLifetime() >= Connection.DISCONNECT_TIMEOUT;
  return con.getResetReceived() || nothingLeftToDo || timedOut;
}
