{
  if (_log.shouldLog(Log.DEBUG))   _log.debug("setActive(" + active + ") called");
  if (active && !_active)   _synQueue.clear();
  boolean wasActive=_active;
  _active=active;
  if (wasActive && !active) {
    try {
      _synQueue.put(new PoisonPacket());
    }
 catch (    InterruptedException ie) {
    }
  }
}
