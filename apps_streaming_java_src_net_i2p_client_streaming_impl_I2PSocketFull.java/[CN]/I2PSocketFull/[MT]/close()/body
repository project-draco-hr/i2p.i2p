{
  if (!_closed.compareAndSet(false,true)) {
    log.logCloseLoop("I2PSocket",_localPeer,"-->",_remotePeer,_connection);
    return;
  }
  Connection c=_connection;
  if (c == null)   return;
  if (log.shouldLog(Log.INFO))   log.info("close() called, connected? " + c.getIsConnected() + " : "+ c);
  if (c.getIsConnected()) {
    MessageInputStream in=c.getInputStream();
    in.close();
    MessageOutputStream out=c.getOutputStream();
    out.closeInternal();
    c.windowAdjusted();
  }
 else {
  }
  destroy();
}
