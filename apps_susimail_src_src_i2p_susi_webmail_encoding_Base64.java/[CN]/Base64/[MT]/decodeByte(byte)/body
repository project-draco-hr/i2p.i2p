{
  byte a=b;
  if (b >= 'A' && b <= 'Z')   b-='A';
 else   if (b >= 'a' && b <= 'z')   b=(byte)(b - 'a' + 26);
 else   if (b >= '0' && b <= '9')   b=(byte)(b - '0' + 52);
 else   if (b == '+')   b=62;
 else   if (b == '/')   b=63;
 else   if (b == '=')   b=0;
 else   throw new DecodingException("Decoding base64 failed (invalid data).");
  return b;
}
