{
  int backupLength=length;
  int backupOffset=offset;
  while (length-- > 0) {
    byte b=in[offset++];
    if (b > 32 && b < 127)     continue;
    if (b == ' ' || b == '\t')     continue;
    if (b == '\r' || b == '\n')     continue;
    throw new DecodingException("No 8bit Data allowed (" + b + ")");
  }
  return new ReadBuffer(in,backupOffset,backupLength);
}
