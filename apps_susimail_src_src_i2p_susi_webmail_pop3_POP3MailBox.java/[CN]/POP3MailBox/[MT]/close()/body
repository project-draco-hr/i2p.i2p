{
synchronized (synchronizer) {
    Debug.debug(Debug.DEBUG,"close()");
    if (socket != null && socket.isConnected()) {
      try {
        sendCmd1a("QUIT");
        socket.close();
      }
 catch (      IOException e) {
        System.err.println("Error while closing connection: " + e.getCause());
      }
    }
    socket=null;
    connected=false;
  }
}
