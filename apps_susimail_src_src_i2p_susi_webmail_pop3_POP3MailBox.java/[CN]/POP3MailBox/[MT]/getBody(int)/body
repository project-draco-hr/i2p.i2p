{
  Debug.debug(Debug.DEBUG,"getBody(" + id + ")");
  Integer idObj=Integer.valueOf(id);
  ReadBuffer body=null;
  if (id >= 1 && id <= mails) {
    body=sendCmdN("RETR " + id);
    if (body == null)     Debug.debug(Debug.DEBUG,"RETR returned null");
  }
 else {
    lastError="Message id out of range.";
  }
  return body;
}
