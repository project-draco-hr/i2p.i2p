{
  int len=fillLine(_buf.length);
  if (len < 0)   return null;
  String s=null;
  if (_encoding == null)   s=new String(_buf,_mark,len);
 else {
    try {
      s=new String(_buf,_mark,len,_encoding);
    }
 catch (    UnsupportedEncodingException e) {
      log.warn(LogSupport.EXCEPTION,e);
    }
  }
  _mark=-1;
  return s;
}
