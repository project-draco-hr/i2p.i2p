{
  File files[]=_userDir.listFiles();
  for (int i=0; i < files.length; i++) {
    if (files[i].isFile() && !files[i].isHidden()) {
      Properties userProps=loadUserProps(files[i]);
      if (userProps == null)       continue;
      User user=new User();
      user.load(userProps);
      if (blog.equals(user.getBlog()))       return user;
    }
  }
  return null;
}
