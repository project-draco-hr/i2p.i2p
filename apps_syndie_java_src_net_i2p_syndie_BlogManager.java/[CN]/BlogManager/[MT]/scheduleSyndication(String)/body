{
  String archives[]=getUpdateArchives();
  StringBuffer buf=new StringBuffer(64);
  if ((archives != null) && (archives.length > 0)) {
    for (int i=0; i < archives.length; i++)     if ((!archives[i].equals(location)) && (archives[i].trim().length() > 0))     buf.append(archives[i]).append(",");
  }
  if ((location != null) && (location.trim().length() > 0))   buf.append(location.trim());
  System.setProperty("syndie.updateArchives",buf.toString());
  Updater.wakeup();
}
