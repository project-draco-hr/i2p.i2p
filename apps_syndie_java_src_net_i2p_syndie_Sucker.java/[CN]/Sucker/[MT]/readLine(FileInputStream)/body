{
  StringBuffer sb=new StringBuffer();
  int c=0;
  while (true) {
    try {
      c=in.read();
    }
 catch (    IOException e) {
      e.printStackTrace();
      return null;
    }
    if (c < 0)     return null;
    if (c == '\n')     break;
    sb.append((char)c);
  }
  return sb.toString();
}
