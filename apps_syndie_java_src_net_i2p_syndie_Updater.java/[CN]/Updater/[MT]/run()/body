{
  try {
    Thread.currentThread().sleep(5 * 60 * 1000);
  }
 catch (  InterruptedException ie) {
  }
  while (true) {
    int delay=BlogManager.instance().getUpdateDelay();
    if (delay < 1)     delay=1;
    update();
    try {
synchronized (this) {
        wait(delay * 60 * 60* 1000);
      }
    }
 catch (    InterruptedException exp) {
    }
  }
}
