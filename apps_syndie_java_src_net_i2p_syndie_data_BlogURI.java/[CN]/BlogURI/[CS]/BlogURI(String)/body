{
  if (uri.startsWith("blog://")) {
    int off="blog://".length();
    _blogHash=new Hash(Base64.decode(uri.substring(off,off + 44)));
    int entryStart=uri.indexOf('/',off + 1);
    if (entryStart < 0) {
      _entryId=-1;
    }
 else {
      try {
        _entryId=Long.parseLong(uri.substring(entryStart + 1).trim());
      }
 catch (      NumberFormatException nfe) {
        _entryId=-1;
      }
    }
  }
 else {
    _blogHash=null;
    _entryId=-1;
  }
}
