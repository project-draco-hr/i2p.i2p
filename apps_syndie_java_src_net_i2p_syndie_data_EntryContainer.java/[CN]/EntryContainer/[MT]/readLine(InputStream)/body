{
  ByteArrayOutputStream baos=new ByteArrayOutputStream(512);
  int i=0;
  while (true) {
    int c=in.read();
    if ((c == (int)'\n') || (c == (int)'\r')) {
      break;
    }
 else     if (c == -1) {
      if (i == 0)       return null;
 else       break;
    }
 else {
      baos.write(c);
    }
    i++;
  }
  return DataHelper.getUTF8(baos.toByteArray());
}
