{
  StringBuffer rv=new StringBuffer(64);
  rv.append(" class=\"s_");
  if (_cutBody)   rv.append("summary_");
 else   rv.append("detail_");
  rv.append(element);
  if (_entry != null) {
    String style=sanitizeStyle(_entry.getHeader(HEADER_STYLE));
    if (style != null) {
      rv.append(" ss_").append(style);
      if (_cutBody)       rv.append("summary_");
 else       rv.append("detail_");
      rv.append(element);
    }
  }
  rv.append("\" ");
  return rv.toString();
}
