{
  if (asReply && _entry != null) {
    return "post.jsp?" + ArchiveViewerBean.PARAM_BLOG + "="+ Base64.encode(blog.getData())+ "&"+ ArchiveViewerBean.PARAM_IN_REPLY_TO+ '='+ Base64.encode("entry://" + _entry.getURI().getKeyHash().toBase64() + "/"+ _entry.getURI().getEntryId());
  }
 else {
    return getPostURL(blog);
  }
}
