{
  BlogInfo info=archive.getBlogInfo(uri);
  if (info == null)   out.write("<br /><span " + getClass("unknownBlog") + ">The blog <span "+ getClass("blogURI")+ ">"+ uri.getKeyHash().toBase64()+ "</span> is not known locally.  "+ "Please get it from an archive and <a "+ getClass("unknownRetry")+ " href=\""+ getPageURL(uri.getKeyHash(),null,uri.getEntryId(),-1,-1,user.getShowExpanded(),user.getShowImages())+ "\">try again</a></span>");
 else   out.write("<br /><span " + getClass("unknownEntry") + ">The blog <a "+ getClass("unknownRetry")+ " href=\""+ getPageURL(uri.getKeyHash(),null,-1,-1,-1,user.getShowExpanded(),user.getShowImages())+ "\">"+ info.getProperty(BlogInfo.NAME)+ "</a> is known, but the entry "+ uri.getEntryId()+ " is not.  "+ "Please get it from an archive and <a "+ getClass("unknownRetry")+ " href=\""+ getPageURL(uri.getKeyHash(),null,uri.getEntryId(),-1,-1,user.getShowExpanded(),user.getShowImages())+ "\">try again</a></span>");
}
