{
  if (orig == null)   return "";
  if (orig.indexOf('&') < 0)   return orig;
  if (true)   return orig.replaceAll("&","&amp;");
  StringBuffer rv=new StringBuffer(orig.length() + 32);
  for (int i=0; i < orig.length(); i++) {
    if (orig.charAt(i) == '&')     rv.append("&amp;");
 else     rv.append(orig.charAt(i));
  }
  return rv.toString();
}
