{
  int included=0;
  if (entry.getAttachments() != null) {
    for (int i=0; i < _entry.getAttachments().length; i++) {
      Attachment a=_entry.getAttachments()[i];
      out.write("    <media:content url=\"" + urlPrefix + sanitizeXML(getAttachmentURL(i))+ "\" fileSize=\""+ a.getDataLength()+ "\" type=\""+ sanitizeTagParam(a.getMimeType())+ "\">");
      out.write("    </media:content>\n");
      if (included == 0)       out.write("    <enclosure url=\"" + urlPrefix + sanitizeXML(getAttachmentURL(i))+ "\" length=\""+ a.getDataLength()+ "\" type=\""+ sanitizeTagParam(a.getMimeType())+ "\" syndietype=\"attachment\" />\n");
      included++;
    }
  }
}
