{
synchronized (_dateFormat) {
    try {
      String str=_dateFormat.format(new Date(when));
      long dayBegin=_dateFormat.parse(str).getTime();
      return blogName + ":<br /> <i>" + str+ "-"+ (when - dayBegin)+ "</i>";
    }
 catch (    ParseException pe) {
      pe.printStackTrace();
      return "unknown";
    }
  }
}
