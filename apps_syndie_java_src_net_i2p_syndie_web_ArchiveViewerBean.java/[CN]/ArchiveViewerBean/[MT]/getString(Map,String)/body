{
  if ((parameters == null) || (parameters.get(param) == null))   return null;
  Object vals=parameters.get(param);
  if (vals.getClass().isArray()) {
    String v[]=(String[])vals;
    if (v.length > 0)     return ((String[])vals)[0];
 else     return null;
  }
 else   if (vals instanceof Collection) {
    Collection c=(Collection)vals;
    if (c.size() > 0)     return (String)c.iterator().next();
 else     return null;
  }
 else {
    return null;
  }
}
