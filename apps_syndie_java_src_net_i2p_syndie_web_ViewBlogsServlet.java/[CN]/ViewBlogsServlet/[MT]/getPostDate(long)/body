{
  String age=null;
  long dayBegin=BlogManager.instance().getDayBegin();
  long postId=when;
  if (postId >= dayBegin) {
    age="today";
  }
 else   if (postId >= dayBegin - 24 * 60 * 60* 1000) {
    age="yesterday";
  }
 else {
    int daysAgo=(int)((dayBegin - postId + 24 * 60 * 60* 1000 - 1) / (24 * 60 * 60* 1000));
    age=daysAgo + " days ago";
  }
  return age;
}
