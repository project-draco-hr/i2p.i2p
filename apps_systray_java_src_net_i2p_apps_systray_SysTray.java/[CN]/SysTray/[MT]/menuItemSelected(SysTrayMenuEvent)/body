{
  if (e.getActionCommand().equals("exit")) {
    _browserChooser=null;
    _frame=null;
    _itemExit=null;
    _itemSelectBrowser=null;
    _sysTrayMenuIcon=null;
    _sysTrayMenu=null;
    _browserChooser=null;
    _frame=null;
    System.exit(0);
  }
 else   if (e.getActionCommand().equals("selectbrowser")) {
    setBrowser(promptForBrowser("Select preferred browser"));
  }
}
