{
  if (value < 0)   return 0;
  if (value < 1)   return 8;
 else   if (value < 2)   return 7;
 else   if (value < 4)   return 6;
 else   if (value < 8)   return 5;
 else   if (value < 16)   return 4;
 else   if (value < 32)   return 3;
 else   if (value < 64)   return 2;
 else   if (value < 128)   return 1;
 else   return 0;
}
