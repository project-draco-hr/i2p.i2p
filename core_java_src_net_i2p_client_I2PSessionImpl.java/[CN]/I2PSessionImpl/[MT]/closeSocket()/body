{
  if (_log.shouldLog(Log.INFO))   _log.info(getPrefix() + "Closing the socket",new Exception("closeSocket"));
  _closed=true;
  if (_reader != null) {
    _reader.stopReading();
    _reader=null;
  }
  if (_queue != null) {
    _queue.close();
  }
  if (_writer != null) {
    _writer.stopWriting();
    _writer=null;
  }
  if (_socket != null) {
    try {
      _socket.close();
    }
 catch (    IOException ioe) {
      propogateError("Caught an IO error closing the socket.  ignored",ioe);
    }
 finally {
      _socket=null;
    }
  }
}
