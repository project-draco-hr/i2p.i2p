{
  boolean again=true;
synchronized (stopping) {
    if (!stopping.get()) {
      stopping.set(true);
      if (_alive.equals(true)) {
        _msgs.clear();
        while (again) {
          try {
            _msgs.put(new MsgData(0,POISON_SIZE,0,0,0));
            again=false;
          }
 catch (          InterruptedException ie) {
            continue;
          }
        }
      }
      _alive=false;
      stopping.set(false);
    }
    stopping.notifyAll();
  }
}
