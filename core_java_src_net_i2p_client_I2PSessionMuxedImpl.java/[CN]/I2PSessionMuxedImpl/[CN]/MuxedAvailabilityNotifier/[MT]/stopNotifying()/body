{
  if (stopping.get())   return;
  stopping.set(true);
  boolean again=true;
  if (_alive.get()) {
    _msgs.clear();
    while (again) {
      try {
        _msgs.put(new MsgData(0,POISON_SIZE,0,0,0));
        again=false;
      }
 catch (      InterruptedException ie) {
        continue;
      }
    }
  }
  _alive.set(false);
  stopping.set(false);
}
