{
  boolean found=false;
  while (!found) {
    if (_cancelled)     return;
    long timeToWait=expiration - _context.clock().now();
    if (timeToWait <= 0) {
      if (_log.shouldLog(Log.WARN))       _log.warn(_prefix + "Expired waiting for the status [" + status+ "]");
      return;
    }
    found=false;
synchronized (_receivedStatus) {
      if (locked_isSuccess(status) || locked_isFailure(status)) {
        if (_log.shouldLog(Log.DEBUG))         _log.debug(_prefix + "Received a confirm (one way or the other)");
        found=true;
      }
      if (!found) {
        if (timeToWait > 5000) {
          timeToWait=5000;
        }
        try {
          _receivedStatus.wait(timeToWait);
        }
 catch (        InterruptedException ie) {
        }
      }
    }
  }
}
