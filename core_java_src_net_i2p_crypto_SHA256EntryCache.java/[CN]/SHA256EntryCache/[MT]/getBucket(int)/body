{
  if (payload <= 1024)   return 1024;
 else   if (payload <= 4 * 1024)   return 4 * 1024;
 else   if (payload <= 8 * 1024)   return 8 * 1024;
 else   if (payload <= 16 * 1024)   return 16 * 1024;
 else   if (payload <= 32 * 1024)   return 32 * 1024;
 else   if (payload <= 48 * 1024)   return 48 * 1024;
 else   return payload;
}
