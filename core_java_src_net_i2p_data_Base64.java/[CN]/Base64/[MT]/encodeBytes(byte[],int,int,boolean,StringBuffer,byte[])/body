{
  int len43=len * 4 / 3;
  int d=0;
  int e=0;
  int len2=len - 2;
  int lineLength=0;
  for (; d < len2; d+=3, e+=4) {
    encode3to4(source,d + off,3,out,alpha);
    lineLength+=4;
    if (breakLines && lineLength == MAX_LINE_LENGTH) {
      out.append('\n');
      e++;
      lineLength=0;
    }
  }
  if (d < len) {
    encode3to4(source,d + off,len - d,out,alpha);
    e+=4;
  }
}
