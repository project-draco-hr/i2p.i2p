{
  if (ms < 5 * 1000) {
    return ms + "ms";
  }
 else   if (ms < 3 * 60 * 1000) {
    return (ms / 1000) + "s";
  }
 else   if (ms < 120 * 60 * 1000) {
    return (ms / (60 * 1000)) + "m";
  }
 else   if (ms < 3 * 24 * 60* 60* 1000) {
    return (ms / (60 * 60 * 1000)) + "h";
  }
 else   if (ms > 1000l * 24l * 60l* 60l* 1000l) {
    return "n/a";
  }
 else {
    return (ms / (24 * 60 * 60* 1000)) + "d";
  }
}
