{
  double val=bytes;
  int scale=0;
  while (val >= 1024) {
    scale++;
    val/=1024;
  }
  DecimalFormat fmt=new DecimalFormat("##0.00");
  String str=fmt.format(val);
switch (scale) {
case 1:
    return str + "K";
case 2:
  return str + "M";
case 3:
return str + "G";
case 4:
return str + "T";
case 5:
return str + "P";
case 6:
return str + "E";
case 7:
return str + "Z";
case 8:
return str + "Y";
default :
return bytes + "";
}
}
