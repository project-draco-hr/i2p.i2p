{
  double val=bytes;
  int scale=0;
  while (val >= 1024) {
    scale++;
    val/=1024;
  }
  DecimalFormat fmt=new DecimalFormat("##0.00");
  String str=fmt.format(val);
switch (scale) {
case 1:
    return str + "&nbsp;K";
case 2:
  return str + "&nbsp;M";
case 3:
return str + "&nbsp;G";
case 4:
return str + "&nbsp;T";
default :
return bytes + "&nbsp;";
}
}
