{
  if ((src == null) || (src.length == 0))   return 0;
  long rv=0;
  for (int i=0; i < numBytes; i++) {
    long cur=src[offset + i] & 0xFF;
    if (cur < 0)     cur=cur + 256;
    cur=(cur << (8 * (numBytes - i - 1)));
    rv+=cur;
  }
  if (rv < 0)   throw new IllegalArgumentException("wtf, fromLong got a negative? " + rv + ": offset="+ offset+ " numBytes="+ numBytes);
  return rv;
}
