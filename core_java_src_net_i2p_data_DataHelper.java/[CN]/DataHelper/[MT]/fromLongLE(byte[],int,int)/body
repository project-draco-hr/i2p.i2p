{
  if (numBytes <= 0 || numBytes > 8)   throw new IllegalArgumentException("Invalid number of bytes");
  long rv=0;
  for (int i=offset + numBytes - 1; i >= offset; i--) {
    rv<<=8;
    rv|=src[i] & 0xFF;
  }
  if (rv < 0)   throw new IllegalArgumentException("wtf, fromLong got a negative? " + rv + ": offset="+ offset+ " numBytes="+ numBytes);
  return rv;
}
