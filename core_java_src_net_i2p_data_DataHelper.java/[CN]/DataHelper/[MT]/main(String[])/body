{
  for (int i=0; i <= 0xFF; i++)   testLong(1,i);
  System.out.println("Test 1byte passed");
  for (long i=0; i <= 0xFFFF; i++)   testLong(2,i);
  System.out.println("Test 2byte passed");
  for (long i=0; i <= 0xFFFFFF; i++)   testLong(3,i);
  System.out.println("Test 3byte passed");
  for (long i=0; i <= 0xFFFFFFFF; i++)   testLong(4,i);
  System.out.println("Test 4byte passed");
  for (long i=0; i <= 0xFFFFFFFF; i++)   testLong(8,i);
  System.out.println("Test 8byte passed");
}
