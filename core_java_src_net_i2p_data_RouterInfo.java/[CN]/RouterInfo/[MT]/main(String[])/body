{
  if (args.length <= 0) {
    System.err.println("Usage: RouterInfo file ...");
    System.exit(1);
  }
  for (int i=0; i < args.length; i++) {
    RouterInfo ri=new RouterInfo();
    InputStream is=null;
    try {
      is=new java.io.FileInputStream(args[i]);
      ri.readBytes(is);
      if (ri.isValid())       System.out.println(ri.toString());
 else       System.err.println("Router info " + args[i] + " is invalid");
    }
 catch (    Exception e) {
      System.err.println("Error reading " + args[i] + ": "+ e);
    }
 finally {
      if (is != null) {
        try {
          is.close();
        }
 catch (        IOException ioe) {
        }
      }
    }
  }
}
