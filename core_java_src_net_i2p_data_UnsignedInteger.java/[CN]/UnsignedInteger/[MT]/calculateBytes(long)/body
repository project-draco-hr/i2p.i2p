{
  BigInteger bi=new BigInteger("" + value);
  byte buf[]=bi.toByteArray();
  if ((buf == null) || (buf.length <= 0))   throw new IllegalArgumentException("Value [" + value + "] cannot be transformed");
  int trim=0;
  while ((trim < buf.length) && (buf[trim] == 0x00))   trim++;
  byte rv[]=new byte[buf.length - trim];
  System.arraycopy(buf,trim,rv,0,rv.length);
  return rv;
}
