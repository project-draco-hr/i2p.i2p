{
  if ((_data == null) || (numBytes < _data.length))   throw new IllegalArgumentException("Value (" + _value + ") is greater than the requested number of bytes ("+ numBytes+ ")");
  if (numBytes == _data.length)   return _data;
  byte[] data=new byte[numBytes];
  System.arraycopy(_data,0,data,numBytes - _data.length,_data.length);
  return data;
}
