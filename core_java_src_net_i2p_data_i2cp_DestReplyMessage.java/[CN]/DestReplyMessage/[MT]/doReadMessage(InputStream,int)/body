{
  if (size == 0) {
    _dest=null;
    _hash=null;
  }
 else {
    try {
      if (size == Hash.HASH_LENGTH) {
        Hash h=new Hash();
        h.readBytes(in);
        _hash=h;
      }
 else {
        Destination d=new Destination();
        d.readBytes(in);
        _dest=d;
      }
    }
 catch (    DataFormatException dfe) {
      _dest=null;
      _hash=null;
    }
  }
}
