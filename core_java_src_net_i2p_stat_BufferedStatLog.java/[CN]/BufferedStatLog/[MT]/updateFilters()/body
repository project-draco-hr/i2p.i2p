{
  String val=_context.getProperty(StatManager.PROP_STAT_FILTER);
  if (val != null) {
    if ((_lastFilters != null) && (_lastFilters.equals(val))) {
    }
 else {
      StringTokenizer tok=new StringTokenizer(val,",");
synchronized (_statFilters) {
        _statFilters.clear();
        while (tok.hasMoreTokens())         _statFilters.add(tok.nextToken().trim());
        if (_statFilters.size() > 0)         _filtersSpecified=true;
 else         _filtersSpecified=false;
      }
    }
    _lastFilters=val;
  }
 else {
synchronized (_statFilters) {
      _statFilters.clear();
      _filtersSpecified=false;
    }
  }
  String filename=_context.getProperty(StatManager.PROP_STAT_FILE);
  if (filename == null)   filename=StatManager.DEFAULT_STAT_FILE;
  File foo=new File(filename);
  if (!foo.isAbsolute())   filename=(new File(_context.getRouterDir(),filename)).getAbsolutePath();
  if ((_outFile != null) && (_outFile.equals(filename))) {
  }
 else {
    if (_out != null)     try {
      _out.close();
    }
 catch (    IOException ioe) {
    }
    _outFile=filename;
    try {
      _out=new BufferedWriter(new FileWriter(_outFile,true),32 * 1024);
    }
 catch (    IOException ioe) {
      ioe.printStackTrace();
    }
  }
}
