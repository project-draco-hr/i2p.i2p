{
  String val=_context.getProperty("stat.logFilters");
  if (val != null) {
    StringTokenizer tok=new StringTokenizer(val,",");
synchronized (_statFilters) {
      _statFilters.clear();
      while (tok.hasMoreTokens())       _statFilters.add(tok.nextToken().trim());
    }
  }
 else {
synchronized (_statFilters) {
      _statFilters.clear();
    }
  }
  String filename=_context.getProperty("stat.logFile");
  if (filename == null)   filename="stats.log";
  if ((_outFile != null) && (_outFile.equals(filename))) {
  }
 else {
    if (_out != null)     try {
      _out.close();
    }
 catch (    IOException ioe) {
    }
    _outFile=filename;
    try {
      _out=new BufferedWriter(new FileWriter(_outFile));
    }
 catch (    IOException ioe) {
      ioe.printStackTrace();
    }
  }
}
