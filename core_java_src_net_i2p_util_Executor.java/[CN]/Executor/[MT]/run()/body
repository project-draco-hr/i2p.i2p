{
  while (true) {
    SimpleTimer.TimedEvent evt=null;
synchronized (_readyEvents) {
      if (_readyEvents.size() <= 0)       try {
        _readyEvents.wait();
      }
 catch (      InterruptedException ie) {
      }
      if (_readyEvents.size() > 0)       evt=(SimpleTimer.TimedEvent)_readyEvents.remove(0);
    }
    if (evt != null) {
      long before=_context.clock().now();
      try {
        evt.timeReached();
      }
 catch (      Throwable t) {
        log("wtf, event borked: " + evt,t);
      }
      long time=_context.clock().now() - before;
      if ((time > 1000) && (_log != null) && (_log.shouldLog(Log.WARN)))       _log.warn("wtf, event execution took " + time + ": "+ evt);
    }
  }
}
