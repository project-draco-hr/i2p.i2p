{
  File f=new File(filename);
  if (!f.exists())   return null;
  FileInputStream fis=null;
  try {
    fis=new FileInputStream(f);
    BufferedReader in=new BufferedReader(new InputStreamReader(fis));
    List lines=new ArrayList(maxNumLines > 0 ? maxNumLines : 64);
    String line=null;
    while ((line=in.readLine()) != null) {
      lines.add(line);
      if ((maxNumLines > 0) && (lines.size() >= maxNumLines)) {
        if (startAtBeginning)         break;
 else         lines.remove(0);
      }
    }
    StringBuffer buf=new StringBuffer(lines.size() * 80);
    for (int i=0; i < lines.size(); i++)     buf.append((String)lines.get(i)).append('\n');
    return buf.toString();
  }
 catch (  IOException ioe) {
    return null;
  }
 finally {
    if (fis != null)     try {
      fis.close();
    }
 catch (    IOException ioe) {
    }
  }
}
