{
  if (_haveNextGaussian) {
    _haveNextGaussian=false;
    return _nextGaussian;
  }
 else {
    double v1, v2, s;
    do {
      v1=2 * nextDouble() - 1;
      v2=2 * nextDouble() - 1;
      s=v1 * v1 + v2 * v2;
    }
 while (s >= 1 || s == 0);
    double multiplier=Math.sqrt(-2 * Math.log(s) / s);
    _nextGaussian=v2 * multiplier;
    _haveNextGaussian=true;
    return v1 * multiplier;
  }
}
