{
  _displayOnScreen=true;
  _location=location;
  _records=new ArrayList();
  _limits=new HashSet();
  _logs=new HashSet();
  _defaultLimit=Log.DEBUG;
  _configLastRead=0;
  loadConfig();
  _writer=new LogWriter();
  Thread t=new I2PThread(_writer);
  t.setName("LogWriter");
  t.setDaemon(true);
  t.start();
  Runtime.getRuntime().addShutdownHook(new ShutdownHook());
}
