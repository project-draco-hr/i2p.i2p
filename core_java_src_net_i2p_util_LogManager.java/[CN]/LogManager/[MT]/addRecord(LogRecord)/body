{
  if ((!_context.isRouterContext()) && _writer == null)   startLogWriter();
  boolean success=_records.offer(record);
  if (!success) {
    if (_dropOnOverflow) {
      _droppedRecords.incrementAndGet();
      return;
    }
synchronized (_writer) {
      _writer.notifyAll();
    }
    try {
      _records.put(record);
    }
 catch (    InterruptedException ie) {
    }
  }
}
