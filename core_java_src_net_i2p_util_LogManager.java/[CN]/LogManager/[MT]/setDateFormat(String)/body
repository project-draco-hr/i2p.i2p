{
  if (format == null)   return false;
  try {
    SimpleDateFormat fmt=new SimpleDateFormat(format);
    _dateFormatPattern=format;
    _dateFormat=fmt;
    return true;
  }
 catch (  IllegalArgumentException iae) {
    getLog(LogManager.class).error("Date format is invalid [" + format + "]",iae);
    return false;
  }
}
