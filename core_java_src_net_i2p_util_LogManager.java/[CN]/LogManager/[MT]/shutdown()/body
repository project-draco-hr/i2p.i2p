{
  if (_writer != null) {
synchronized (_writer) {
      _writer.notifyAll();
    }
    if (!_records.isEmpty()) {
      try {
        Thread.sleep(250);
      }
 catch (      InterruptedException ie) {
      }
    }
    _writer.flushRecords(false);
    _writer.stopWriting();
synchronized (_writer) {
      _writer.notifyAll();
    }
  }
}
