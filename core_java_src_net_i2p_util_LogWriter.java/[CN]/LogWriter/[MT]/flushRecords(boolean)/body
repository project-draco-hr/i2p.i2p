{
  try {
    List<LogRecord> records=_manager._removeAll();
    if (records == null)     return;
    for (    LogRecord rec : records) {
      writeRecord(rec);
    }
    if (!records.isEmpty()) {
      try {
        _currentOut.flush();
      }
 catch (      IOException ioe) {
        System.err.println("Error flushing the records");
      }
    }
  }
 catch (  Throwable t) {
    t.printStackTrace();
  }
 finally {
    if (shouldWait) {
      try {
synchronized (this) {
          this.wait(10 * 1000);
        }
      }
 catch (      InterruptedException ie) {
      }
    }
  }
}
