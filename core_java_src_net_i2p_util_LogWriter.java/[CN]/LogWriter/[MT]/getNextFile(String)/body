{
  File f=new File(pattern);
  File base=null;
  if (!f.isAbsolute())   base=I2PAppContext.getGlobalContext().getLogDir();
  if ((pattern.indexOf('#') < 0) && (pattern.indexOf('@') <= 0)) {
    if (base != null)     return new File(base,pattern);
 else     return f;
  }
  int max=_manager.getRotationLimit();
  if (_rotationNum == -1) {
    return getFirstFile(base,pattern,max);
  }
  _rotationNum++;
  if (_rotationNum > max)   _rotationNum=0;
  return new File(replace(pattern,_rotationNum));
}
