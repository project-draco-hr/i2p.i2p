{
  _write=true;
  final boolean shouldReadConfig=!SystemVersion.isAndroid();
  try {
    while (_write) {
      flushRecords();
      if (_write && shouldReadConfig)       rereadConfig();
    }
  }
 catch (  Exception e) {
    System.err.println("Error writing the log: " + e);
    e.printStackTrace();
  }
  closeWriter();
}
