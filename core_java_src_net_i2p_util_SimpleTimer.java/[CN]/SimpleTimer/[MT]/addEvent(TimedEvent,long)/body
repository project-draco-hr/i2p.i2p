{
  long eventTime=System.currentTimeMillis() + timeoutMs;
synchronized (_events) {
    if (_eventTimes.containsKey(event))     _events.remove(_eventTimes.get(event));
    while (_events.containsKey(new Long(eventTime)))     eventTime++;
    _events.put(new Long(eventTime),event);
    _eventTimes.put(event,new Long(eventTime));
    _events.notifyAll();
  }
}
