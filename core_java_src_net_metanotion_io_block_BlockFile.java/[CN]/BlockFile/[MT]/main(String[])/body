{
  if (args.length != 1) {
    System.err.println("Usage: BlockFile file");
    return;
  }
  boolean init=!(new File(args[0])).exists();
  try {
    RAIFile raif=new RAIFile(new File(args[0]),true,true);
    BlockFile bf=new BlockFile(raif,init);
    bf.bfck(true);
    bf.close();
    raif.close();
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
}
