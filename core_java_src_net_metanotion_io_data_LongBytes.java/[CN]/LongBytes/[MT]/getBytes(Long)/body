{
  byte[] b=new byte[8];
  long v=o.longValue();
  b[0]=(byte)(0xff & (v >> 56));
  b[1]=(byte)(0xff & (v >> 48));
  b[2]=(byte)(0xff & (v >> 40));
  b[3]=(byte)(0xff & (v >> 32));
  b[4]=(byte)(0xff & (v >> 24));
  b[5]=(byte)(0xff & (v >> 16));
  b[6]=(byte)(0xff & (v >> 8));
  b[7]=(byte)(0xff & v);
  return b;
}
