{
  Signature sgr=new EdDSAEngine(MessageDigest.getInstance("SHA-512"));
  EdDSAPublicKeySpec pubKey=new EdDSAPublicKeySpec(ZERO_PK,EdDSANamedCurveTable.getByName("ed25519-sha-512"));
  PublicKey vKey=new EdDSAPublicKey(pubKey);
  sgr.initVerify(vKey);
  byte[] message="This is a secret message".getBytes(Charset.forName("UTF-8"));
  sgr.update(message);
  exception.expect(SignatureException.class);
  exception.expectMessage("signature length is wrong");
  sgr.verify(new byte[]{0});
}
