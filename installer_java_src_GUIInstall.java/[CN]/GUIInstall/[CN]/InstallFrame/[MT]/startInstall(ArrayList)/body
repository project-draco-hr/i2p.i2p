{
  Panel p;
  categoryPanels=new CategoryPanel[categories.size()];
  Iterator it=categories.iterator();
  for (int i=0; it.hasNext(); i++) {
    cats.add("" + i,categoryPanels[i]=new CategoryPanel((InstallCategory)it.next()));
  }
  current=0;
  cl.show(cats,"0");
