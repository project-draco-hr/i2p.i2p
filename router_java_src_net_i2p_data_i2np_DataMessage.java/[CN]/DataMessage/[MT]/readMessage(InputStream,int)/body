{
  if (type != MESSAGE_TYPE)   throw new I2NPMessageException("Message type is incorrect for this message");
  try {
    int size=(int)DataHelper.readLong(in,4);
    if ((size <= 0) || (size > MAX_SIZE))     throw new I2NPMessageException("wtf, size out of range?  " + size);
    _data=new byte[size];
    int read=read(in,_data);
    if (read != size)     throw new DataFormatException("Not enough bytes to read (read = " + read + ", expected = "+ size+ ")");
  }
 catch (  DataFormatException dfe) {
    throw new I2NPMessageException("Unable to load the message data",dfe);
  }
}
