{
  while (_alive) {
    try {
synchronized (_jobLock) {
        if (_readyJobs.size() > 0) {
          return (Job)_readyJobs.remove(0);
        }
 else {
          _jobLock.wait();
        }
      }
    }
 catch (    InterruptedException ie) {
    }
  }
  if (_log.shouldLog(Log.WARN))   _log.warn("No longer alive, returning null");
  return null;
}
