{
  int msgLoadBps=CONCURRENT_MESSAGES * 5 * 1024 / 10;
  msgLoadBps*=2;
  int curBps=getBps();
  if ((curBps + msgLoadBps) / 1024 >= _context.bandwidthLimiter().getOutboundKBytesPerSecond())   return true;
  if ((curBps + msgLoadBps) / 1024 >= _context.bandwidthLimiter().getInboundKBytesPerSecond())   return true;
  if (_context.throttle().getMessageDelay() > 1000)   return true;
  return false;
}
