{
  int msgLoadBps=CONCURRENT_MESSAGES * 5 / 10;
  msgLoadBps*=2;
  if (_context.bandwidthLimiter().getSendBps() / 1024d + (double)msgLoadBps >= _context.bandwidthLimiter().getOutboundKBytesPerSecond())   return true;
  if (_context.bandwidthLimiter().getReceiveBps() / 1024d + (double)msgLoadBps >= _context.bandwidthLimiter().getInboundKBytesPerSecond())   return true;
  if (_context.throttle().getMessageDelay() > 1000)   return true;
  return false;
}
