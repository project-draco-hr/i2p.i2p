{
  while (true) {
    int alive=0;
    for (int i=0; i < _routers.size(); i++) {
      Router r=(Router)_routers.get(i);
      if (!r.isAlive()) {
        if (_log.shouldLog(Log.INFO))         _log.info("Router " + i + " is dead");
      }
 else {
        alive++;
      }
    }
    if (alive > 0) {
      try {
        Thread.sleep(30 * 1000);
      }
 catch (      InterruptedException ie) {
      }
    }
 else {
      break;
    }
  }
  _log.info("All routers shut down");
}
