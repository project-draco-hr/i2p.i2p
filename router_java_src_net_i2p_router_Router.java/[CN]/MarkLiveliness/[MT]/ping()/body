{
  FileOutputStream fos=null;
  try {
    fos=FileStreamFactory.getFileOutputStream(_pingFile);
    fos.write(("" + System.currentTimeMillis()).getBytes());
  }
 catch (  IOException ioe) {
    System.err.println("Error writing to ping file");
    ioe.printStackTrace();
  }
 finally {
    if (fos != null)     try {
      fos.close();
    }
 catch (    IOException ioe) {
    }
  }
}
