{
  _log.log(Log.CRIT,"Shutdown(" + exitCode + ") complete",new Exception("Shutdown"));
  try {
    _context.logManager().shutdown();
  }
 catch (  Throwable t) {
  }
  File f=new File(getPingFile());
  f.delete();
  if (_killVMOnEnd) {
    try {
      Thread.sleep(1000);
    }
 catch (    InterruptedException ie) {
    }
    Runtime.getRuntime().halt(exitCode);
  }
}
