{
  if (_log.shouldLog(logLevel))   _log.log(logLevel,"Disconnecting the client - " + reason + " config: "+ _config);
  DisconnectMessage msg=new DisconnectMessage();
  if (reason.length() > 255)   reason=reason.substring(0,255);
  msg.setReason(reason);
  try {
    doSend(msg);
  }
 catch (  I2CPMessageException ime) {
    if (_log.shouldLog(Log.WARN))     _log.warn("Error writing out the disconnect message",ime);
  }
  try {
    Thread.sleep(50);
  }
 catch (  InterruptedException ie) {
  }
  stopRunning();
}
