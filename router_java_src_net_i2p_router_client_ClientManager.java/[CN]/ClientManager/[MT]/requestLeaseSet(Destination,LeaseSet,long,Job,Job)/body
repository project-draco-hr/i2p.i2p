{
  ClientConnectionRunner runner=getRunner(dest);
  if (runner == null) {
    if (_log.shouldLog(Log.ERROR))     _log.warn("Cannot request the lease set, as we can't find a client runner for " + dest.calculateHash().toBase64() + ".  disconnected?");
    _context.jobQueue().addJob(onFailedJob);
  }
 else {
    runner.requestLeaseSet(set,_context.clock().now() + timeout,onCreateJob,onFailedJob);
  }
}
