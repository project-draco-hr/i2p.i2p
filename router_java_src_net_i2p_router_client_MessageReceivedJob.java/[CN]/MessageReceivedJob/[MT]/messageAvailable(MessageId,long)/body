{
  if (_log.shouldLog(Log.DEBUG))   _log.debug("Sending message available: " + id + " to sessionId "+ _runner.getSessionId()+ " (with nonce=1)",new Exception("available"));
  MessageStatusMessage msg=new MessageStatusMessage();
  msg.setMessageId(id);
  msg.setSessionId(_runner.getSessionId());
  msg.setSize(size);
  msg.setNonce(1);
  msg.setStatus(MessageStatusMessage.STATUS_AVAILABLE);
  try {
    _runner.doSend(msg);
  }
 catch (  I2CPMessageException ime) {
    if (_log.shouldLog(Log.ERROR))     _log.error("Error writing out the message status message",ime);
  }
}
