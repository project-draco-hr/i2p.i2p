{
  if (info.getNetworkId() == Router.NETWORK_ID && (getKBucketSetSize() < MIN_REMAINING_ROUTERS || _context.router().getUptime() < DONT_FAIL_PERIOD || _context.commSystem().countActivePeers() <= MIN_ACTIVE_PEERS)) {
    if (_log.shouldLog(Log.WARN))     _log.warn("Not failing " + peer.toBase64() + " as we are just starting up or have problems");
    return;
  }
  if (_floodfillEnabled || _context.jobQueue().getMaxLag() > 500 || getKBucketSetSize() > MAX_DB_BEFORE_SKIPPING_SEARCH) {
    super.lookupBeforeDropping(peer,info);
    return;
  }
  search(peer,new DropLookupFoundJob(_context,peer,info),new DropLookupFailedJob(_context,peer,info),10 * 1000,false);
}
