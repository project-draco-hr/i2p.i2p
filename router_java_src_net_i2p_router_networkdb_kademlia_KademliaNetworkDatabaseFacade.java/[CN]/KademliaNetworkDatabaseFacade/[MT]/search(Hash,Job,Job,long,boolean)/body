{
  if (!_initialized)   return;
  boolean isNew=true;
  SearchJob searchJob=null;
synchronized (_activeRequests) {
    searchJob=(SearchJob)_activeRequests.get(key);
    if (searchJob == null) {
      searchJob=new SearchJob(_context,this,key,onFindJob,onFailedLookupJob,timeoutMs,true,isLease);
      _activeRequests.put(key,searchJob);
    }
 else {
      isNew=false;
    }
  }
  if (isNew) {
    if (_log.shouldLog(Log.DEBUG))     _log.debug("this is the first search for that key, fire off the SearchJob");
    _context.jobQueue().addJob(searchJob);
  }
 else {
    if (_log.shouldLog(Log.INFO))     _log.info("Deferring search for " + key.toBase64() + " with "+ onFindJob);
    searchJob.addDeferred(onFindJob,onFailedLookupJob,timeoutMs,isLease);
  }
}
