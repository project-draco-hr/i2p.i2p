{
  int rv=-1;
  RateStat rs=getContext().statManager().getRate("netDb.successTime");
  if (rs != null) {
    Rate r=rs.getRate(rs.getPeriods()[0]);
    rv=(int)r.getLifetimeAverageValue();
  }
  rv<<=1;
  if ((rv <= 0) || (rv > PER_PEER_TIMEOUT))   return PER_PEER_TIMEOUT;
 else   return rv + 1025;
}
