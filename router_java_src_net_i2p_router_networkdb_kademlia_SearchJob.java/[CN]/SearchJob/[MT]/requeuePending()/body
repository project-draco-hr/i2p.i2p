{
  if (_pendingRequeueJob == null)   _pendingRequeueJob=new JobImpl(){
    public String getName(){
      return "Requeue search with pending";
    }
    public void runJob(){
      searchNext();
    }
  }
;
  long now=Clock.getInstance().now();
  if (_pendingRequeueJob.getTiming().getStartAfter() < now)   _pendingRequeueJob.getTiming().setStartAfter(now + 5 * 1000);
  JobQueue.getInstance().addJob(_pendingRequeueJob);
}
