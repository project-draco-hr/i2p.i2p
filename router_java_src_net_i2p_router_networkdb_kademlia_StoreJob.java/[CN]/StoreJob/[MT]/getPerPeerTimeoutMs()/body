{
  int rv=-1;
  RateStat rs=getContext().statManager().getRate("netDb.ackTime");
  if (rs != null) {
    Rate r=rs.getRate(rs.getPeriods()[0]);
    rv=(int)r.getLifetimeAverageValue();
  }
  rv<<=1;
  if (rv <= 0)   return PER_PEER_TIMEOUT;
 else   if (rv < MIN_PER_PEER_TIMEOUT)   return MIN_PER_PEER_TIMEOUT;
 else   if (rv > PER_PEER_TIMEOUT)   return PER_PEER_TIMEOUT;
 else   return rv;
}
