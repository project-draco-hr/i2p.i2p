{
  if ((getSendSuccessSize().getRate(period).getCurrentEventCount() > 0) || (getSendSuccessSize().getRate(period).getLastEventCount() > 0) || (getReceiveSize().getRate(period).getCurrentEventCount() > 0)|| (getReceiveSize().getRate(period).getLastEventCount() > 0)|| _context.commSystem().isEstablished(_peer))   return true;
