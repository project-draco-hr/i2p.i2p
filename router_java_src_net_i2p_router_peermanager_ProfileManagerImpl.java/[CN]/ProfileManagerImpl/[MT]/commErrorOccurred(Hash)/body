{
  if (_log.shouldLog(Log.INFO))   _log.info("Comm error occurred for peer " + peer.toBase64(),new Exception("Comm error"));
  PeerProfile data=getProfile(peer);
  if (data == null)   return;
  data.setLastSendFailed(Clock.getInstance().now());
  data.getSendFailureSize().addData(0,0);
  data.getCommError().addData(0,0);
}
