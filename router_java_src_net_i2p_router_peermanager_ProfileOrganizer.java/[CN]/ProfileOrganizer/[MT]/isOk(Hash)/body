{
  NetworkDatabaseFacade netDb=_context.netDb();
  if (netDb == null)   return true;
  if (null != netDb.lookupRouterInfoLocally(peer)) {
    if (_log.shouldLog(Log.INFO))     _log.info("Peer " + peer.toBase64() + " is locally known, selecting");
    return true;
  }
 else {
    if (_log.shouldLog(Log.WARN))     _log.warn("Peer " + peer.toBase64() + " is NOT locally known, disallowing its selection");
    return false;
  }
}
