{
  super();
  _servers=new ArrayList(3);
  _listeners=new CopyOnWriteArrayList();
  _context=ctx;
  _daemon=daemon;
  String disabled=ctx.getProperty(PROP_DISABLED,DEFAULT_DISABLED);
  if (Boolean.parseBoolean(disabled)) {
    _initialized=true;
    return;
  }
  if (lsnr != null)   _listeners.add(lsnr);
  updateConfig();
  startTimestamper();
}
