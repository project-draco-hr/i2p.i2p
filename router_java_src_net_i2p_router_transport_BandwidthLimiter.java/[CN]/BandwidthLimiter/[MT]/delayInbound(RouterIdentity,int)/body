{
  while (calculateDelayInbound(peer,numBytes) > 0) {
    try {
synchronized (_inboundWaitLock) {
        _inboundWaitLock.wait(10 * 1000);
      }
    }
 catch (    InterruptedException ie) {
    }
  }
synchronized (_inboundWaitLock) {
    _inboundWaitLock.notify();
  }
  consumeInbound(peer,numBytes);
}
