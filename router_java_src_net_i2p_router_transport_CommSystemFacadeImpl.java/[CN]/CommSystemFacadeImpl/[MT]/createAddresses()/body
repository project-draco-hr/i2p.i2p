{
  List<RouterAddress> addresses=new ArrayList(_manager.getAddresses());
  Transport ntcp=_manager.getTransport(NTCPTransport.STYLE);
  boolean hasNTCP=ntcp != null && ntcp.hasCurrentAddress();
  boolean newCreated=false;
  if (!hasNTCP) {
    RouterAddress addr=createNTCPAddress(_context);
    if (_log.shouldLog(Log.INFO))     _log.info("NTCP address: " + addr);
    if (addr != null) {
      addresses.add(addr);
      newCreated=true;
    }
  }
  if (_log.shouldLog(Log.INFO))   _log.info("Creating addresses: " + addresses + " isNew? "+ newCreated,new Exception("creator"));
  return addresses;
}
