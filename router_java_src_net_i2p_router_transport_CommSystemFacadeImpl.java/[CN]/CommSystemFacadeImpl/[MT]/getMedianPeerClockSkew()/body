{
  if (_manager == null) {
    if (_log.shouldLog(Log.INFO))     _log.info("Returning null for median peer clock skew (no transport manager)!");
    return null;
  }
  Vector skews=_manager.getClockSkews();
  if (skews == null) {
    if (_log.shouldLog(Log.ERROR))     _log.error("Returning null for median peer clock skew (no data)!");
    return null;
  }
  if (skews.size() < 5) {
    if (_log.shouldLog(Log.ERROR))     _log.error("Returning null for median peer clock skew (only " + skews.size() + " peers)!");
    return null;
  }
  Collections.sort(skews);
  Long medianPeerClockSkew=(Long)(skews.get(skews.size() / 2));
  if (_log.shouldLog(Log.INFO))   _log.info("Our median peer clock skew is " + medianPeerClockSkew + " s.");
  return medianPeerClockSkew;
}
