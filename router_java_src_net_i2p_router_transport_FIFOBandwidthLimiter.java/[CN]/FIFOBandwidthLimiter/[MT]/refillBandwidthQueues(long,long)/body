{
  if (_log.shouldLog(Log.DEBUG))   _log.debug("Refilling the queues with " + bytesInbound + "/"+ bytesOutbound);
  _availableInboundBytes+=bytesInbound;
  _availableOutboundBytes+=bytesOutbound;
  if (_availableInboundBytes > _maxInboundBytes)   _availableInboundBytes=_maxInboundBytes;
  if (_availableOutboundBytes > _maxOutboundBytes)   _availableOutboundBytes=_maxOutboundBytes;
  satisfyRequests();
}
