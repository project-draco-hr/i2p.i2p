{
  String enableUDP=_context.router().getConfigSetting(PROP_ENABLE_UDP);
  if (enableUDP == null)   enableUDP=DEFAULT_ENABLE_UDP;
  if ("true".equalsIgnoreCase(enableUDP)) {
    UDPTransport udp=new UDPTransport(_context);
    addTransport(udp);
    initializeAddress(udp);
  }
  if (enableNTCP(_context))   addTransport(new NTCPTransport(_context));
  if (_transports.isEmpty())   _log.log(Log.CRIT,"No transports are enabled");
}
