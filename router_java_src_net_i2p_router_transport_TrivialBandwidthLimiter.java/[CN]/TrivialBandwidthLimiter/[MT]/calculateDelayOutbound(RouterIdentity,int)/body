{
  if (_maxSendBytesPerMinute <= 0)   return 0;
  if (_availableSend - numBytes > 0) {
    return 0;
  }
 else {
    long val=MINUTE * (numBytes - _availableSend) / _maxSendBytesPerMinute;
    if (_log.shouldLog(Log.DEBUG))     _log.debug("DelayOutbound: " + val + " for "+ numBytes+ " (avail="+ _availableSend+ ", max="+ _maxSendBytesPerMinute+ ")");
    return val;
  }
}
