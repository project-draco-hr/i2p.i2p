{
  long delay=0;
  while ((delay=calculateDelayOutbound(peer,numBytes)) > 0) {
    try {
synchronized (_outboundWaitLock) {
        _outboundWaitLock.wait(delay);
      }
    }
 catch (    InterruptedException ie) {
    }
  }
synchronized (_outboundWaitLock) {
    _outboundWaitLock.notify();
  }
  consumeOutbound(peer,numBytes);
}
