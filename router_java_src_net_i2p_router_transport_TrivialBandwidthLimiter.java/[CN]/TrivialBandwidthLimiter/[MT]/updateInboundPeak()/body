{
  String inBwStr=_context.getProperty(PROP_INBOUND_BANDWIDTH_PEAK);
  if ((inBwStr != null) && (inBwStr.trim().length() > 0) && (!(inBwStr.equals(String.valueOf(_inboundBurstBytes))))) {
    try {
      long in=Long.parseLong(inBwStr);
      _inboundBurstBytes=in * 1024;
    }
 catch (    NumberFormatException nfe) {
      if (_log.shouldLog(Log.WARN))       _log.warn("Invalid inbound bandwidth burst limit [" + inBwStr + "], keeping as "+ _inboundBurstBytes);
    }
  }
 else {
    if (_log.shouldLog(Log.DEBUG))     _log.debug("Inbound bandwidth burst limits not specified in the config via " + PROP_INBOUND_BANDWIDTH_PEAK);
  }
}
