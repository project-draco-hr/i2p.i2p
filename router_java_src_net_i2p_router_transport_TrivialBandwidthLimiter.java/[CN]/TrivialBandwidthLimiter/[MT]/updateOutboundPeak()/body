{
  String outBwStr=_context.getProperty(PROP_OUTBOUND_BANDWIDTH_PEAK);
  if ((outBwStr != null) && (outBwStr.trim().length() > 0) && (!(outBwStr.equals(String.valueOf(_outboundBurstBytes))))) {
    try {
      long out=Long.parseLong(outBwStr);
      if (out >= 0) {
        _outboundBurstBytes=out * 1024;
      }
    }
 catch (    NumberFormatException nfe) {
      if (_log.shouldLog(Log.WARN))       _log.warn("Invalid outbound bandwidth burst limit [" + outBwStr + "], keeping as "+ _outboundBurstBytes);
    }
  }
 else {
    if (_log.shouldLog(Log.DEBUG))     _log.debug("Outbound bandwidth burst limits not specified in the config via " + PROP_OUTBOUND_BANDWIDTH_PEAK);
  }
}
