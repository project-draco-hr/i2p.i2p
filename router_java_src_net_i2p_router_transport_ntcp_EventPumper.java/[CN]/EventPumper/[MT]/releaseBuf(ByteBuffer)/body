{
  buf.clear();
  int extra=_bufCache.size();
  boolean cached=extra < _numBufs;
  if (cached) {
    _bufCache.offer(buf);
    if (extra > 5) {
      __consecutiveExtra++;
      if (__consecutiveExtra >= 20) {
        _numBufs=Math.max(_numBufs - 1,MIN_BUFS);
        __consecutiveExtra=0;
      }
    }
  }
 else {
    __liveBufs--;
  }
}
