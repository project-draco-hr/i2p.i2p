{
  RouterContext ctx=getContext();
  if (ctx == null) {
    System.err.println("NIO transport has no context?");
  }
 else {
    RouterAddress ra=CommSystemFacadeImpl.createNTCPAddress(ctx);
    if (ra != null) {
      _myAddress=new NTCPAddress(ra);
      replaceAddress(ra);
      if (_log.shouldLog(Log.INFO))       _log.info("NTCP address configured: " + _myAddress);
    }
 else {
      if (_log.shouldLog(Log.INFO))       _log.info("NTCP address is outbound only");
    }
  }
}
