{
  RouterAddress ra=createNTCPAddress();
  if (ra != null) {
    NTCPAddress addr=new NTCPAddress(ra);
    if (addr.getPort() <= 0) {
      _myAddress=null;
      if (_log.shouldLog(Log.ERROR))       _log.error("NTCP address is outbound only, since the NTCP configuration is invalid");
    }
 else {
      _myAddress=addr;
      replaceAddress(ra);
      if (_log.shouldLog(Log.INFO))       _log.info("NTCP address configured: " + _myAddress);
    }
  }
 else {
    if (_log.shouldLog(Log.INFO))     _log.info("NTCP address is outbound only");
  }
}
