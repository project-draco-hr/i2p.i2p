{
  List<RouterAddress> addrs=getTargetAddresses(target);
  for (int i=0; i < addrs.size(); i++) {
    RouterAddress addr=addrs.get(i);
    byte[] ip=addr.getIP();
    if (addr.getPort() < MIN_PEER_PORT || ip == null) {
      continue;
    }
    if (!isValid(ip)) {
      if (!_context.getBooleanProperty("i2np.ntcp.allowLocal")) {
        continue;
      }
    }
    return addr;
  }
  return null;
}
