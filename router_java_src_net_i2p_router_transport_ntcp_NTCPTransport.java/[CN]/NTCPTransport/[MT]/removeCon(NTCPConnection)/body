{
  NTCPConnection removed=null;
synchronized (_conLock) {
    RouterIdentity ident=con.getRemotePeer();
    if (ident != null)     removed=_conByIdent.remove(ident.calculateHash());
  }
  if ((removed != null) && (removed != con)) {
    if (_log.shouldLog(Log.WARN))     _log.warn("Multiple connections on remove, closing " + removed + " (already closed "+ con+ ")");
    _context.statManager().addRateData("ntcp.multipleCloseOnRemove",removed.getUptime());
    removed.close();
  }
}
