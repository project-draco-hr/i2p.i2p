{
  NTCPConnection removed=null;
synchronized (_conLock) {
    RouterIdentity ident=con.getRemotePeer();
    if (ident != null)     removed=(NTCPConnection)_conByIdent.remove(ident.calculateHash());
  }
  if ((removed != null) && (removed != con)) {
    if (_log.shouldLog(Log.ERROR))     _log.error("Multiple connections on remove, closing " + removed + " (already closed "+ con+ ")");
    removed.close();
  }
}
