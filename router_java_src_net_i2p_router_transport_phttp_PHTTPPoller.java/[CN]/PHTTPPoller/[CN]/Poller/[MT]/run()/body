{
  _running=true;
  try {
    Thread.sleep(10 * 1000);
  }
 catch (  InterruptedException ie) {
  }
  _log.debug("Poller running with delay [" + _transport.getPollFrequencyMs() + "]");
  try {
    while (_running) {
      int numRead=getMessages();
      if (numRead > 0)       _log.info("# messages found: " + numRead);
      try {
        Thread.sleep(_transport.getPollFrequencyMs());
      }
 catch (      InterruptedException ie) {
      }
    }
  }
 catch (  Throwable t) {
    _log.info("Error while polling",t);
  }
}
