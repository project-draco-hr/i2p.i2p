{
  while (_keepRunning && !_con.getIsClosed()) {
    OutNetMessage msg=_con.getNextMessage();
    if (msg == null) {
      if (_keepRunning && !_con.getIsClosed())       _log.error("next message is null but we should keep running?");
      _con.closeConnection();
      return;
    }
 else {
      sendMessage(msg);
    }
  }
}
