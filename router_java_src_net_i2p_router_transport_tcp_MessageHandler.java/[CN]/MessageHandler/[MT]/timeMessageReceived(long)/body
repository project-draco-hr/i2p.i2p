{
  long delta=_con.getRouterContext().clock().now() - remoteTime;
  if ((delta > Router.CLOCK_FUDGE_FACTOR) || (delta < 0 - Router.CLOCK_FUDGE_FACTOR)) {
    _log.error("Peer " + _identHash.toBase64().substring(0,6) + " is too far skewed ("+ DataHelper.formatDuration(delta)+ ") after uptime of "+ DataHelper.formatDuration(_con.getLifetime()));
    _con.closeConnection();
  }
 else {
    if (_log.shouldLog(Log.INFO))     _log.info("Peer " + _identHash.toBase64().substring(0,6) + " is only skewed by ("+ DataHelper.formatDuration(delta)+ ") after uptime of "+ DataHelper.formatDuration(_con.getLifetime()));
  }
}
