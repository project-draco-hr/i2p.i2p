{
  try {
    if (host != null) {
      InetAddress iaddr=InetAddress.getByName(host);
      _host=iaddr.getHostAddress();
      _addr=iaddr;
    }
    _port=port;
  }
 catch (  UnknownHostException uhe) {
    _host=null;
    _port=-1;
    _addr=null;
    if (_log.shouldLog(Log.WARN))     _log.warn("Unknown host [" + host + "] for port ["+ port+ "]",uhe);
  }
}
