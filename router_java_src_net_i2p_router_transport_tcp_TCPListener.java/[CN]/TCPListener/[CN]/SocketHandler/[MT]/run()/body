{
  while (_handle) {
    Socket cur=null;
    try {
synchronized (_pendingSockets) {
        if (_pendingSockets.size() <= 0)         _pendingSockets.wait();
 else         cur=(Socket)_pendingSockets.remove(0);
      }
    }
 catch (    InterruptedException ie) {
    }
    if (cur != null)     handleSocket(cur);
    cur=null;
  }
}
