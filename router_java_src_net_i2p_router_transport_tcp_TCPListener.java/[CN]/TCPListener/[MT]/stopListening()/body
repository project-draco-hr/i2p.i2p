{
  if (_listener != null)   _listener.stopListening();
  for (int i=0; i < _handlers.size(); i++) {
    SocketHandler h=(SocketHandler)_handlers.get(i);
    h.stopHandling();
  }
  _handlers.clear();
  if (_socket != null) {
    try {
      _socket.close();
      _socket=null;
    }
 catch (    IOException ioe) {
    }
  }
  _listener=null;
}
