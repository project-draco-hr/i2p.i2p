{
  _bitfieldMessageId=messageId;
  boolean fragmentsRcvd[]=null;
  for (int i=data.length - 1; i >= 0; i--) {
    if (data[i] != null) {
      if (fragmentsRcvd == null)       fragmentsRcvd=new boolean[i + 1];
      fragmentsRcvd[i]=true;
    }
  }
  if (fragmentsRcvd == null)   _fragmentsReceived=new boolean[0];
 else   _fragmentsReceived=fragmentsRcvd;
}
