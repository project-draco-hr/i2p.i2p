{
  _bitfieldMessageId=messageId;
  for (int i=data.length - 1; i >= 0; i--) {
    if (data[i] != null) {
      if (_fragmentsReceived == null)       _fragmentsReceived=new boolean[i + 1];
      _fragmentsReceived[i]=true;
    }
  }
  if (_fragmentsReceived == null)   _fragmentsReceived=new boolean[0];
}
