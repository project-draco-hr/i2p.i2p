{
  if (_currentState != STATE_PENDING_INTRO)   return;
  _nextSend=_context.clock().now() + 500;
  if (_currentState == STATE_PENDING_INTRO) {
    _currentState=STATE_UNKNOWN;
  }
  _bobIP=bobIP;
  _bobPort=bobPort;
  _remoteHostId=new RemoteHostId(bobIP,bobPort);
  if (_log.shouldLog(Log.INFO))   _log.info("Introduced to " + _remoteHostId + ", now lets get on with establishing");
}
