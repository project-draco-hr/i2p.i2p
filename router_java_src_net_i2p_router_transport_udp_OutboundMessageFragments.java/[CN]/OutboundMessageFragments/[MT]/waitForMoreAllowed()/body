{
  while (_alive) {
    finishMessages();
    try {
synchronized (_activeMessages) {
        if (!_alive)         return false;
 else         if (_activeMessages.size() < MAX_ACTIVE)         return true;
 else         if (_allowExcess)         return true;
 else         _activeMessages.wait(1000);
      }
    }
 catch (    InterruptedException ie) {
    }
  }
  return false;
}
