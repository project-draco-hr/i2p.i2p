{
  if (_messageBuf != null)   releaseBuf();
  if (size <= CACHE1_BYTES)   _messageBuf=_cache1.acquire();
 else   if (size <= CACHE2_BYTES)   _messageBuf=_cache2.acquire();
 else   if (size <= CACHE3_BYTES)   _messageBuf=_cache3.acquire();
 else   if (size <= CACHE4_BYTES)   _messageBuf=_cache4.acquire();
 else   throw new IllegalArgumentException("Size too large! " + size);
}
