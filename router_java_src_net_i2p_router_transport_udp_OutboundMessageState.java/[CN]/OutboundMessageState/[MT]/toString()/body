{
  StringBuffer buf=new StringBuffer(64);
  buf.append("Message ").append(_messageId);
  if (_fragmentSends != null)   buf.append(" with ").append(_fragmentSends.length).append(" fragments");
  if (_messageBuf != null)   buf.append(" of size ").append(_messageBuf.getValid());
  buf.append(" volleys: ").append(_maxSends);
  buf.append(" lifetime: ").append(getLifetime());
  return buf.toString();
}
