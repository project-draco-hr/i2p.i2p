{
  if (_dead)   return null;
synchronized (_outboundMessages) {
    for (    OutboundMessageState state : _outboundMessages) {
      if (locked_shouldSend(state)) {
        if (_log.shouldLog(Log.DEBUG))         _log.debug("Allocate sending to " + _remotePeer + ": "+ state.getMessageId());
        return state;
      }
    }
  }
  if (_log.shouldLog(Log.DEBUG))   _log.debug("Nothing to send to " + _remotePeer + ", with "+ _outboundMessages.size()+ " remaining");
  return null;
}
