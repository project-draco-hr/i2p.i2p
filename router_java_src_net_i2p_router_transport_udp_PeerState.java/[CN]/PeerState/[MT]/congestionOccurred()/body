{
  long now=_context.clock().now();
  if (_lastCongestionOccurred + 10 * 1000 > now)   return false;
  _lastCongestionOccurred=now;
  _context.statManager().addRateData("udp.congestionOccurred",_sendWindowBytes,_sendBps);
  _sendWindowBytes=(_sendWindowBytes * 2) / 3;
  if (_sendWindowBytes < MINIMUM_WINDOW_BYTES)   _sendWindowBytes=MINIMUM_WINDOW_BYTES;
  if (_sendWindowBytes < _slowStartThreshold)   _slowStartThreshold=_sendWindowBytes;
  return true;
}
