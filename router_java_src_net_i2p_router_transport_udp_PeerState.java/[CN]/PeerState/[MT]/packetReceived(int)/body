{
  _packetsReceived++;
  if (size <= MIN_MTU) {
    _consecutiveSmall++;
  }
 else {
    _consecutiveSmall=0;
    _mtuReceive=LARGE_MTU;
    return;
  }
  if (_packetsReceived > MTU_RCV_DISPLAY_THRESHOLD) {
    if (_consecutiveSmall < MTU_RCV_DISPLAY_THRESHOLD)     _mtuReceive=LARGE_MTU;
 else     _mtuReceive=MIN_MTU;
  }
}
