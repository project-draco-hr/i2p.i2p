{
  _rttDeviation=_rttDeviation + (int)(0.25d * (Math.abs(lifetime - _rtt) - _rttDeviation));
  _rtt=(int)((float)_rtt * (0.9f) + (0.1f) * (float)lifetime);
  _rto=_rtt + (_rttDeviation << 2);
  if (_log.shouldLog(Log.DEBUG))   _log.debug("Recalculating timeouts w/ lifetime=" + lifetime + ": rtt="+ _rtt+ " rttDev="+ _rttDeviation+ " rto="+ _rto);
  if (_rto < MIN_RTO)   _rto=MIN_RTO;
  if (_rto > MAX_RTO)   _rto=MAX_RTO;
}
