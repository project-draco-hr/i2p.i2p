{
  if (newPort == _listenPort)   return;
  try {
    if (_bindAddress == null)     _socket=new DatagramSocket(_listenPort);
 else     _socket=new DatagramSocket(_listenPort,_bindAddress);
    _sender.updateListeningPort(_socket,newPort);
    _receiver.updateListeningPort(_socket,newPort);
    _listenPort=newPort;
  }
 catch (  SocketException se) {
    if (_log.shouldLog(Log.ERROR))     _log.error("Unable to bind on " + _listenPort);
  }
}
