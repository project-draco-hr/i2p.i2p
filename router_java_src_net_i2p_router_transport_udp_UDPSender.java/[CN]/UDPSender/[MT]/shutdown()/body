{
  _keepRunning=false;
  _outboundQueue.clear();
  UDPPacket poison=UDPPacket.acquire(_context,false);
  poison.setMessageType(TYPE_POISON);
  _outboundQueue.offer(poison);
  for (int i=1; i <= 5 && !_outboundQueue.isEmpty(); i++) {
    try {
      Thread.sleep(i * 50);
    }
 catch (    InterruptedException ie) {
    }
  }
  _outboundQueue.clear();
}
