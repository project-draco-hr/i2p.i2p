{
  if (shouldTest()) {
    long now=_context.clock().now();
    if ((_forceRun) || (now - _lastTested >= TEST_FREQUENCY)) {
      runTest();
    }
  }
  if (_alive) {
    long delay=(TEST_FREQUENCY / 2) + _context.random().nextInt(TEST_FREQUENCY);
    if (delay <= 0)     throw new RuntimeException("wtf, delay is " + delay);
    schedule(delay);
  }
}
