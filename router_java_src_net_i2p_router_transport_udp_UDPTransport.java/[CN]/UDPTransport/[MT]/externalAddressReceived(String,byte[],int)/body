{
  if (_log.shouldLog(Log.WARN))   _log.warn("Received address: " + Addresses.toString(ip,port) + " from: "+ source);
  if (explicitAddressSpecified())   return;
  String sources=_context.getProperty(PROP_SOURCES,DEFAULT_SOURCES);
  if (!sources.contains(source))   return;
  if (!isValid(ip))   return;
  if (source.equals(Transport.SOURCE_INTERFACE)) {
    if (ip.length == 4 && !gotIPv4Addr) {
      gotIPv4Addr=true;
      return;
    }
 else     if (ip.length == 16 && !gotIPv6Addr) {
      gotIPv6Addr=true;
      return;
    }
  }
  boolean changed=changeAddress(ip,port);
  if (changed && ip.length == 4 && source.equals(Transport.SOURCE_INTERFACE))   setReachabilityStatus(CommSystemFacade.STATUS_OK);
}
