{
  short status=getReachabilityStatus();
switch (status) {
case CommSystemFacade.STATUS_REJECT_UNSOLICITED:
case CommSystemFacade.STATUS_DIFFERENT:
    if (_log.shouldLog(Log.INFO))     _log.info("Require introducers, because our status is " + status);
  return true;
default :
if (!allowDirectUDP()) {
  if (_log.shouldLog(Log.INFO))   _log.info("Require introducers, because we do not allow direct UDP connections");
  return true;
}
return false;
}
}
