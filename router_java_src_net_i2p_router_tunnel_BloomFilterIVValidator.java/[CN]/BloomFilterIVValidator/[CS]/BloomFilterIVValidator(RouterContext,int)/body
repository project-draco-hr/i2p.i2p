{
  _context=ctx;
  if (KBps < MIN_SHARE_KBPS_TO_USE_BLOOM)   _filter=new DecayingHashSet(ctx,HALFLIFE_MS,16,"TunnelIVV");
 else   if (KBps >= MIN_SHARE_KBPS_FOR_HUGE_BLOOM)   _filter=new DecayingBloomFilter(ctx,HALFLIFE_MS,16,"TunnelIVV",25);
 else   if (KBps >= MIN_SHARE_KBPS_FOR_BIG_BLOOM)   _filter=new DecayingBloomFilter(ctx,HALFLIFE_MS,16,"TunnelIVV",24);
 else   _filter=new DecayingBloomFilter(ctx,HALFLIFE_MS,16,"TunnelIVV");
  ctx.statManager().createRateStat("tunnel.duplicateIV","Note that a duplicate IV was received","Tunnels",new long[]{10 * 60 * 1000l,60 * 60 * 1000l,3 * 60 * 60* 1000l,24 * 60 * 60* 1000l});
}
