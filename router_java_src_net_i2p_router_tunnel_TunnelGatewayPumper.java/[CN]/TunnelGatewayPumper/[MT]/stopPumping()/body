{
  _stop=true;
  _wantsPumping.clear();
  PumpedTunnelGateway poison=new PoisonPTG(_context);
  for (int i=0; i < _pumpers; i++)   _wantsPumping.offer(poison);
  for (int i=1; i <= 5 && !_wantsPumping.isEmpty(); i++) {
    try {
      Thread.sleep(i * 50);
    }
 catch (    InterruptedException ie) {
    }
  }
  _wantsPumping.clear();
}
