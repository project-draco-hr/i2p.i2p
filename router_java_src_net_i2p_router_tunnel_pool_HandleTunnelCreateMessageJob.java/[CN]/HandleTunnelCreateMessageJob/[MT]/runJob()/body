{
  if (_log.shouldLog(Log.DEBUG))   _log.debug("handle join request: " + _request);
  int status=shouldAccept();
  if (status == STATUS_DEFERRED) {
    return;
  }
 else   if (status > 0) {
    if (_log.shouldLog(Log.WARN))     _log.warn("reject(" + status + ") join request: "+ _request);
    sendRejection(status);
  }
 else {
    if (_log.shouldLog(Log.DEBUG))     _log.debug("accept join request: " + _request);
    accept();
  }
}
