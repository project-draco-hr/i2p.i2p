{
  TunnelCreateStatusMessage reply=new TunnelCreateStatusMessage(getContext());
  reply.setNonce(_request.getNonce());
  reply.setReceiveTunnelId(new TunnelId(DataHelper.fromLong(recvId,0,4)));
  reply.setStatus(status);
  GarlicMessage msg=createReply(reply);
  if (msg == null)   throw new RuntimeException("wtf, couldn't create reply? to " + _request);
  TunnelGatewayMessage gw=new TunnelGatewayMessage(getContext());
  gw.setMessage(msg);
  gw.setTunnelId(_request.getReplyTunnel());
  gw.setMessageExpiration(msg.getMessageExpiration());
  if (_log.shouldLog(Log.DEBUG))   _log.debug("sending (" + status + ") to the tunnel "+ _request.getReplyGateway().toBase64().substring(0,4)+ ":"+ _request.getReplyTunnel()+ " wrt "+ _request);
  SendMessageDirectJob job=new SendMessageDirectJob(getContext(),gw,_request.getReplyGateway(),REPLY_TIMEOUT,REPLY_PRIORITY);
  job.runJob();
}
