{
  int quantity=_settings.getBackupQuantity() + _settings.getQuantity();
  int usable=countUsableTunnels();
  if (usable >= quantity)   return;
  if (_log.shouldLog(Log.INFO))   _log.info(toString() + ": building a fallback tunnel (usable: " + usable+ " needed: "+ quantity+ ")");
  if ((usable == 0) && (_settings.getAllowZeroHop()))   _builder.buildTunnel(_context,this,true);
 else   _builder.buildTunnel(_context,this);
  refreshBuilders();
}
