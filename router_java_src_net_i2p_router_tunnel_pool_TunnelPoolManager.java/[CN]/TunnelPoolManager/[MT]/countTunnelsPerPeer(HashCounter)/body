{
  List<TunnelPool> pools=new ArrayList();
  listPools(pools);
  int tunnelCount=0;
  for (  TunnelPool tp : pools) {
    for (    TunnelInfo info : tp.listTunnels()) {
      if (info.getLength() > 1) {
        tunnelCount++;
        for (int j=0; j < info.getLength(); j++) {
          Hash peer=info.getPeer(j);
          if (!_context.routerHash().equals(peer))           lc.increment(peer);
        }
      }
    }
  }
  return tunnelCount;
}
