{
  if (!_isReachable) {
    long before=Clock.getInstance().now();
    sendReply(false);
    long after=Clock.getInstance().now();
    if (_log.shouldLog(Log.DEBUG))     _log.debug("JoinJob .refuse took " + (after - before) + "ms to refuse "+ _info);
  }
 else {
    long before=Clock.getInstance().now();
    boolean ok=TunnelManagerFacade.getInstance().joinTunnel(_info);
    long afterJoin=Clock.getInstance().now();
    sendReply(ok);
    long after=Clock.getInstance().now();
    if (_log.shouldLog(Log.DEBUG))     _log.debug("JoinJob .joinTunnel took " + (afterJoin - before) + "ms and sendReply took "+ (after - afterJoin)+ "ms");
  }
}
