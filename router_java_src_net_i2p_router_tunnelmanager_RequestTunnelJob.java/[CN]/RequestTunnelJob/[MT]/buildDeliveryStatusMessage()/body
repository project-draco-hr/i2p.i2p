{
  DeliveryStatusMessage msg=new DeliveryStatusMessage();
  msg.setArrival(new Date(Clock.getInstance().now()));
  msg.setMessageId(RandomSource.getInstance().nextInt(Integer.MAX_VALUE));
  Date exp=new Date(_expiration);
  if (_log.shouldLog(Log.DEBUG))   _log.debug("Setting the expiration on the delivery status message to " + exp);
  msg.setMessageExpiration(exp);
  return msg;
}
