{
  DeliveryStatusMessage msg=new DeliveryStatusMessage(getContext());
  msg.setArrival(new Date(getContext().clock().now()));
  msg.setMessageId(getContext().random().nextLong(I2NPMessage.MAX_ID_VALUE));
  Date exp=new Date(getContext().clock().now() + _timeoutMs);
  if (_log.shouldLog(Log.DEBUG))   _log.debug("Setting the expiration on the delivery status message to " + exp);
  msg.setMessageExpiration(exp);
  return msg;
}
