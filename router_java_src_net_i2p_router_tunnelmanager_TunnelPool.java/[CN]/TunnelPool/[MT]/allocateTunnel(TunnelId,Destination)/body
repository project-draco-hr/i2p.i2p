{
  if (!_isLive)   return false;
  ClientTunnelPool pool=getClientPool(dest);
  if (pool == null) {
    if (_log.shouldLog(Log.ERROR))     _log.error("Error allocating tunnel " + id + " to "+ dest+ ": no pool for the client known");
    return false;
  }
  TunnelInfo tunnel=removeFreeTunnel(id);
  if (tunnel == null) {
    if (_log.shouldLog(Log.ERROR))     _log.error("Error allocating tunnel " + id + " to "+ dest+ ": tunnel is no longer free?");
    return false;
  }
  TunnelInfo t=tunnel;
  while (t != null) {
    t.setDestination(dest);
    t=t.getNextHopInfo();
  }
  pool.addInboundTunnel(tunnel);
  return true;
}
