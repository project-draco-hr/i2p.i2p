{
  _context=context;
  _log=context.logManager().getLog(getClass());
  _entryBytes=entryBytes;
  _name=name;
  _durationMs=durationMs;
  _extenders=null;
  _extended=null;
  _longToEntry=null;
  _longToEntryMask=0;
  context.addShutdownTask(new Shutdown());
  _decayEvent=new DecayEvent();
  _keepDecaying=true;
  _decayEvent.schedule(_durationMs);
}
