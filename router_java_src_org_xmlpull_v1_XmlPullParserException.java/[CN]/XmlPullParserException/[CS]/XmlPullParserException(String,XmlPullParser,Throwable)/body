{
  super((msg == null ? "" : msg + " ") + (parser == null ? "" : "(position:" + parser.getPositionDescription() + ") ") + (chain == null ? "" : "caused by: " + chain));
  if (parser != null) {
    this.row=parser.getLineNumber();
    this.column=parser.getColumnNumber();
  }
  this.detail=chain;
}
