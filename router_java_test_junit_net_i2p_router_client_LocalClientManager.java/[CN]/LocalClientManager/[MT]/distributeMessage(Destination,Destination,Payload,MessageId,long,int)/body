{
  ClientConnectionRunner sender=getRunner(fromDest);
  ClientConnectionRunner runner=getRunner(toDest);
  if (runner != null) {
    runner.receiveMessage(toDest,fromDest,payload);
    if (sender != null)     sender.updateMessageDeliveryStatus(msgId,MessageStatusMessage.STATUS_SEND_SUCCESS_LOCAL);
  }
 else {
    System.out.println("Message " + msgId + " is targeting a REMOTE destination - DROPPED");
    if (sender != null)     sender.updateMessageDeliveryStatus(msgId,MessageStatusMessage.STATUS_SEND_GUARANTEED_FAILURE);
  }
}
