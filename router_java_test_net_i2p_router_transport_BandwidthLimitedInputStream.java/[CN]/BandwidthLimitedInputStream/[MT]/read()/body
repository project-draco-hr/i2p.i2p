{
  if (_pullFromOutbound)   _currentRequest=_context.bandwidthLimiter().requestOutbound(1,_peerSource);
 else   _currentRequest=_context.bandwidthLimiter().requestInbound(1,_peerSource);
  _currentRequest.waitForNextAllocation();
synchronized (this) {
    _currentRequest=null;
  }
  return in.read();
}
